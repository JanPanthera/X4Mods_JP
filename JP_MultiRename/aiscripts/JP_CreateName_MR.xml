<?xml version="1.0" encoding="utf-8"?>

<!--
<return>
  <retval name="CREATED_NAME" value="$CreatedName"/>
</return>
-->

<aiscript name="JP_CreateName_MR" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="aiscripts.xsd">

  <order id="JP_CreateName_MR" name="CreateName_MR JP" category="internal" infinite="false">
    <params>
      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
      <param name="SHIP" text="Ship" type="object" default="null"/>
      <param name="NAME_TILES_ARRANGEMENT" text="NameTilesArrangement" type="internal" default="[]"/>
      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
      <param name="REMOVE_SENTINEL_TAG" text="Remove Sentinel Tag?" comment="Remove Sentinel Tag?" type="bool" default="true"/>
      <param name="REMOVE_VANGUARD_TAG" text="Remove Vanguard Tag?" comment="Remove Vanguard Tag?" type="bool" default="true"/>
      <param name="SHORTEN_SENTINEL" text="" comment="Short Sentinel Tag" type="bool" default="true"/>
      <param name="SHORTEN_VANGUARD" text="" comment="Short Vanguard Tag" type="bool" default="true"/>
      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
      <param name="NUMBER_TO_ADD" text="NumberToAdd" type="number" default="''"/>
      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
      <!-- DEBUG -->
      <param name="DEBUG" text="DebugText" type="number" default="0" advanced="true">
        <input_param name="min" value="0"/>
        <input_param name="max" value="100"/>
        <input_param name="step" value="100"/>
      </param>
      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    </params>
    <requires>
      <match shiptype="shiptype.lasertower" negate="true"/>
    </requires>
  </order>

  <interrupts>
    <handler ref="SectorChangeHandler"/>
    <handler ref="TargetInvalidHandler"/>
    <handler ref="AttackHandler"/>
    <handler ref="MissileLockHandler" />
    <handler ref="ScannedHandler"/>
    <handler ref="InspectedHandler"/>
    <handler ref="FoundAbandonedHandler"/>
    <handler ref="FoundLockboxHandler"/>
    <handler ref="ResupplyHandler"/>
    <handler ref="JobRemoveRequestHandler" />
  </interrupts>

  <init>
    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    <set_value name="$DebugDirectory" exact="'JP_MultiRenameTest.logs'"/>
    <set_value name="$DebugFileName" exact="this.ship.idcode + '.JP_CreateName_MR.xml.log'"/>
    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    <set_value name="$Ship" exact="$SHIP"/>
    <set_value name="$CreatedName" exact="''"/>
    <set_value name="$ClassTag" exact="''"/>
    <set_value name="$TypeName" exact="''"/>
    <set_value name="$ModelName" exact="''"/>
    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
  </init>

  <attention min="unknown">
    <actions>

      <wait exact="1ms"/>
      <label name="INIT"/>

      <do_if value="$DEBUG gt 0">
        <debug_to_file append="false" directory="$DebugDirectory" name="$DebugFileName" text="'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~'"/>
        <debug_to_file directory="$DebugDirectory" name="$DebugFileName" text="'[' + player.systemtime.{'%F - %X'} + '] ' + '~~ JP_CreateName_MR.xml ~ Started ~~' + '\n'"/>
      </do_if>

      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->

      <do_for_each name="$_NameTile" in="$NAME_TILES_ARRANGEMENT" counter="$_it">

        <!-- ['TAG', $TAG_POSITION, $_ColorString, $TAG_OBJECT.knownname] -->
        <do_if value="$_NameTile.{1} == 'TAG'">
          <do_if value="$_NameTile.{3} != ''">
            <set_value name="$CreatedName" exact="$_NameTile.{3} + $_NameTile.{4} + '\033X'" operation="add"/>
          </do_if>
          <do_else>
            <set_value name="$CreatedName" exact="$_NameTile.{4}" operation="add"/>
          </do_else>
        </do_if>

        <!-- ['CLASS_TAG', $CLASS_TAG_POSITION, $_ColorString] -->
        <do_if value="$_NameTile.{1} == 'CLASS_TAG'">
          <do_if value="$Ship.class == class.ship_s">
            <set_value name="$_ClassTag" exact="'~S~'"/>
          </do_if>
          <do_if value="$Ship.class == class.ship_m">
            <set_value name="$_ClassTag" exact="'~M~'"/>
          </do_if>
          <do_if value="$Ship.class == class.ship_l">
            <set_value name="$_ClassTag" exact="'~L~'"/>
          </do_if>
          <do_if value="$Ship.class == class.ship_xl">
            <set_value name="$_ClassTag" exact="'~XL~'"/>
          </do_if>
          <do_if value="$_NameTile.{3} != ''">
            <set_value name="$CreatedName" exact="$_NameTile.{3} + $_ClassTag + '\033X'" operation="add"/>
          </do_if>
          <do_else>
            <set_value name="$CreatedName" exact="$_ClassTag" operation="add"/>
          </do_else>
          <remove_value name="$_ClassTag"/>
        </do_if>

        <!-- ['TYPE_NAME', $TYPE_NAME_POSITION, $_ColorString] -->
        <do_if value="$_NameTile.{1} == 'TYPE_NAME'">
          <do_if value="$_NameTile.{3} != ''">
            <set_value name="$CreatedName" exact="$_NameTile.{3} + $SHIP.typename + '\033X'" operation="add"/>
          </do_if>
          <do_else>
            <set_value name="$CreatedName" exact="$SHIP.typename" operation="add"/>
          </do_else>
        </do_if>

        <!-- ['MODEL_NAME', $MODEL_NAME_POSITION, $_ColorString] -->
        <do_if value="$_NameTile.{1} == 'MODEL_NAME'">
          <set_value name="$_ModelName" exact="$SHIP.macro.name"/>
          <do_if value="$REMOVE_SENTINEL_TAG">
            <substitute_text source="$_ModelName" text="$_ModelName">
              <replace string="' ' + {20111,1201}" with="''"/>
            </substitute_text>
          </do_if>
          <!-- Remove the Vanguard Tag from the name ? -->
          <do_if value="$REMOVE_VANGUARD_TAG">
            <substitute_text source="$_ModelName" text="$_ModelName">
              <replace string="' ' + {20111,1101}" with="''"/>
            </substitute_text>
          </do_if>
          <!-- Replace Sentinel with S* ? -->
          <do_if value="not $REMOVE_SENTINEL_TAG and $SHORTEN_SENTINEL">
            <substitute_text source="$_ModelName" text="$_ModelName">
              <replace string="{20111,1201}" with="{8888888, 1121}"/>
            </substitute_text>
          </do_if>
          <!-- Replace Vanguard with V* ? -->
          <do_if value="not $REMOVE_VANGUARD_TAG and $SHORTEN_VANGUARD">
            <substitute_text source="$_ModelName" text="$_ModelName">
              <replace string="{20111,1101}" with="{8888888, 1120}"/>
            </substitute_text>
          </do_if>
          <do_if value="$_NameTile.{3} != ''">
            <set_value name="$CreatedName" exact="$_NameTile.{3} + $_ModelName + '\033X'" operation="add"/>
          </do_if>
          <do_else>
            <set_value name="$CreatedName" exact="$_ModelName" operation="add"/>
          </do_else>
          <remove_value name="$_ModelName"/>
        </do_if>

        <!-- ['NUMBER', $NUMBER_POSITION, $_ColorString] -->
        <do_if value="$_NameTile.{1} == 'NUMBER'">
          <do_if value="$NUMBER_TO_ADD != ''">
            <do_if value="$NUMBER_TO_ADD lt 10">
              <set_value name="$_Number" exact="'00' + $NUMBER_TO_ADD"/>
            </do_if>
            <do_elseif value="$NUMBER_TO_ADD ge 10 and $NUMBER_TO_ADD lt 100">
              <set_value name="$_Number" exact="'0' + $NUMBER_TO_ADD"/>
            </do_elseif>
            <do_else>
              <set_value name="$_Number" exact="'%1'.[$NUMBER_TO_ADD]"/>
            </do_else>
            <do_if value="$_NameTile.{3} != ''">
              <set_value name="$CreatedName" exact="$_NameTile.{3} + $_NameTile.{4}.[$_Number] + '\033X'" operation="add"/>
            </do_if>
            <do_else>
              <set_value name="$CreatedName" exact="$_NameTile.{4}.[$_Number]" operation="add"/>
            </do_else>
            <remove_value name="$_Number"/>
          </do_if>
        </do_if>

        <do_if value="$_it lt $NAME_TILES_ARRANGEMENT.count">
          <set_value name="$CreatedName" exact="' '" operation="add"/>
        </do_if>

      </do_for_each>

      <do_if value="$DEBUG gt 0">
        <debug_to_file directory="$DebugDirectory" name="$DebugFileName" text="'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~'"/>
        <debug_to_file directory="$DebugDirectory" name="$DebugFileName" text="'$CreatedName: ' + $CreatedName"/>
        <debug_to_file directory="$DebugDirectory" name="$DebugFileName" text="'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~\n'"/>
      </do_if>

      <label name="FINISH"/>

      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->

      <do_if value="$DEBUG gt 0">
        <debug_to_file directory="$DebugDirectory" name="$DebugFileName" text="'[' + player.systemtime.{'%F - %X'} + '] ' + '~~ JP_CreateName_MR.xml ~ Finished ~~'"/>
        <debug_to_file directory="$DebugDirectory" name="$DebugFileName" text="'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~\n'"/>
      </do_if>

      <label name="CLEANUP"/>
      <remove_value name="$Ship"/>
      <remove_value name="$DebugFileName"/>
      <remove_value name="$DebugDirectory"/>

      <label name="END"/>
      <wait exact="1ms"/>

      <return>
        <retval name="CREATED_NAME" value="$CreatedName"/>
      </return>

    </actions>
  </attention>

  <on_abort>
  </on_abort>

</aiscript>