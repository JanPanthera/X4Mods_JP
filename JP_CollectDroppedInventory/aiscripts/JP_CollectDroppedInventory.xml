<?xml version="1.0" encoding="utf-8"?>

<aiscript name="JP_CollectDroppedInventory" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="aiscripts.xsd" version="1">

  <order id="JP_CollectDroppedInventory" name="{8888888, 2097}CollectDroppedInventory - {8888888, 2099}{8888888, 2098}{20001, 201}{8888888, 2099}" category="navigation" infinite="true">
    <params>
      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
      <param name="SECTOR" text="{20001, 201}" comment="Sector" type="object" default="if global.$JP_SavedSettingsCDI? then global.$JP_SavedSettingsCDI.{1}.{2} else this.sector">
        <input_param name="class" value="[class.sector]"/>
      </param>
      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
      <param name="IDLE_TIME" text="{8888888, 2080}" comment="Idle Time" type="time" default="if global.$JP_SavedSettingsCDI? then global.$JP_SavedSettingsCDI.{2}.{2} else 600s">
        <input_param name="min" value="60s"/>
        <input_param name="max" value="3600s"/>
        <input_param name="step" value="10s"/>
      </param>
      <param name="IDLE_FOLLOW" text="{8888888, 2081}" comment="Idle: Follow?" type="bool" default="if global.$JP_SavedSettingsCDI? then global.$JP_SavedSettingsCDI.{3}.{2} else false"/>
      <param name="WHO_TO_FOLLOW" text="- {8888888, 2082}" comment="Who to follow?" type="object" default="if global.$JP_SavedSettingsCDI? then global.$JP_SavedSettingsCDI.{4}.{2} else null">
        <input_param name="class" value="[class.ship]"/>
        <input_param name="owner" value="this.ship.owner"/>
      </param>
      <param name="IDLE_DOCKING" text="{8888888, 2083}" comment="Idle: Docking?" type="bool" default="if global.$JP_SavedSettingsCDI? then global.$JP_SavedSettingsCDI.{5}.{2} else false"/>
      <param name="WHERE_TO_DOCK" text="- {8888888, 2084}" comment="Where to dock?" type="object" default="if global.$JP_SavedSettingsCDI? then global.$JP_SavedSettingsCDI.{6}.{2} else null">
        <input_param name="class" value="if this.ship.isclass.[class.ship_s, class.ship_xs] then [class.station, class.ship_m, class.ship_l, class.ship_xl] else [class.station, class.ship_l, class.ship_xl]"/>
      </param>
      <param name="IDLE_RANDOM_MOVEMENT" text="{8888888, 2085}" comment="Idle: Movement?" type="bool" default="if global.$JP_SavedSettingsCDI? then global.$JP_SavedSettingsCDI.{7}.{2} else false"/>
      <param name="IN_WHICH_SECTOR" text="- {8888888, 2086}" comment="In which sector?" type="position" default="if global.$JP_SavedSettingsCDI? then global.$JP_SavedSettingsCDI.{8}.{2} else [this.ship.sector, this.ship.position]">
        <input_param name="class" value="class.sector"/>
      </param>
      <param name="IDLE_MOVE_TO" text="{8888888, 2087}" comment="Idle: Move to?" type="bool" default="if global.$JP_SavedSettingsCDI? then global.$JP_SavedSettingsCDI.{9}.{2} else false"/>
      <param name="WHERE_TO_MOVE" text="- {8888888, 2088}" comment="Where to move?" type="position" default="if global.$JP_SavedSettingsCDI? then global.$JP_SavedSettingsCDI.{10}.{2} else [this.ship.sector, this.ship.position]">
        <input_param name="class" value="class.sector"/>
      </param>
      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
      <param name="ADD_ORDER_TAG" text="{8888888, 2094}" comment="Add order tag?" type="bool" default="if global.$JP_SavedSettingsCDI? then global.$JP_SavedSettingsCDI.{11}.{2} else true"/>
      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
      <param name="SAVE_SETTINGS" text="{8888888, 2095}" comment="Save Settings?" type="bool" default="false"/>
      <param name="DELETE_SETTINGS" text="{8888888, 2096}" comment="Delete Settings?" type="bool" default="false"/>
      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
      <!-- DEBUG -->
      <param name="DEBUG" text="DebugText" type="number" default="if global.$JP_SavedSettingsCDI? then global.$JP_SavedSettingsCDI.{12}.{2} else 0" advanced="true">
        <input_param name="min" value="0"/>
        <input_param name="max" value="100"/>
        <input_param name="step" value="100"/>
      </param>
      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    </params>
    <skill min="0"/>
    <requires>
      <match shiptype="shiptype.lasertower" negate="true"/>
    </requires>
    <location object="$_InventoryToCollect" condition="$_InventoryToCollect? and @$_InventoryToCollect.class != null"/>
  </order>

  <interrupts>
    <handler ref="SectorChangeHandler"/>
    <handler ref="TargetInvalidHandler"/>
    <handler ref="AttackHandler"/>
    <handler ref="MissileLockHandler" />
    <handler ref="ScannedHandler"/>
    <handler ref="InspectedHandler"/>
    <handler ref="FoundAbandonedHandler"/>
    <handler ref="FoundLockboxHandler"/>
    <handler ref="ResupplyHandler"/>
    <handler ref="JobRemoveRequestHandler" />
  </interrupts>

  <init>
    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    <do_if value="$DEBUG gt 0">
      <set_value name="$DebugDirectory" exact="'JP_CollectDroppedInventory.logs'"/>
      <set_value name="$DebugFileName" exact="this.ship.idcode + '.JP_CollectDroppedInventory.xml.log'"/>
    </do_if>
    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    <set_value name="$Ship" exact="this.ship"/>
    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    <do_if value="$ADD_ORDER_TAG">
      <set_value name="$_ShipName" exact="$Ship.knownname"/>
      <set_object_name object="this.ship" name="$_ShipName"/>
      <substitute_text source="$_ShipName" text="$_ShipName">
        <replace string="'\033#FFA95908# #CDI-S\033X'" with="''"/>
      </substitute_text>
      <set_object_name object="this.ship" name="$_ShipName"/>
      <remove_value name="$_ShipName"/>
      <set_object_name object="this.ship" name="this.ship.knownname + '\033#FFA95908# #CDI-S\033X'"/>
    </do_if>
    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    <do_if value="$SAVE_SETTINGS">
      <create_list name="$_Settings"/>
      <append_list_elements name="$_Settings" other="[['SECTOR', $SECTOR],
                                                      ['IDLE_TIME', $IDLE_TIME],
                                                      ['IDLE_FOLLOW', $IDLE_FOLLOW],
                                                      ['WHO_TO_FOLLOW', $WHO_TO_FOLLOW],
                                                      ['IDLE_DOCKING', $IDLE_DOCKING],
                                                      ['WHERE_TO_DOCK', $WHERE_TO_DOCK],
                                                      ['IDLE_RANDOM_MOVEMENT', $IDLE_RANDOM_MOVEMENT],
                                                      ['IN_WHICH_SECTOR', $IN_WHICH_SECTOR],
                                                      ['IDLE_MOVE_TO', $IDLE_MOVE_TO],
                                                      ['WHERE_TO_MOVE', $WHERE_TO_MOVE],
                                                      ['ADD_ORDER_TAG', $ADD_ORDER_TAG],
                                                      ['DEBUG', $DEBUG]]"/>

      <do_if value="not global.$JP_SavedSettingsCDI?">
        <create_list name="global.$JP_SavedSettingsCDI"/>
        <append_list_elements name="global.$JP_SavedSettingsCDI" other="$_Settings"/>
      </do_if>
      <do_else>
        <do_for_each name="$_GlobalSetting" in="global.$JP_SavedSettingsCDI" counter="$_it">
          <do_if value="$_GlobalSetting.{2} != $_Settings.{$_it}.{2}">
            <set_value name="$_GlobalSetting.{2}" exact="$_Settings.{$_it}.{2}"/>
          </do_if>
        </do_for_each>
      </do_else>
      <remove_value name="$_Settings"/>
    </do_if>
    <do_if value="$DELETE_SETTINGS">
      <remove_value name="global.$JP_SavedSettingsCDI"/>
      <!-- cancel order because the settings can now be invalid -->
      <cancel_order order="this.ship.order"/>
    </do_if>
    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
  </init>

  <attention min="unknown">
    <actions>

      <wait exact="1s"/>
      <label name="START_LBL"/>

      <do_if value="$DEBUG gt 0">
        <debug_to_file append="false" directory="$DebugDirectory" name="$DebugFileName" text="'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~'"/>
        <debug_to_file directory="$DebugDirectory" name="$DebugFileName" text="'[' + player.systemtime.{'%F - %X'} + '] ' + '~~ JP_CollectDroppedInventory.xml ~ Started ~~' + '\n'"/>
      </do_if>

      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->

      <label name="RESUME_LBL"/>

      <label name="MOVE_TO_SECTOR_LBL"/>
      <do_if value="$Ship.sector != $SECTOR">
        <set_command command="command.move" param="$SECTOR"/>
        <run_script name="'move.generic'">
          <param name="destination" value="$SECTOR"/>
          <param name="endintargetzone" value="true"/>
          <param name="recallsubordinates" value="true"/>
        </run_script>
        <do_if value="this.zone.isclass.highway">
          <get_safe_pos result="$_SafePos" zone="$Ship.zone" object="$Ship" direction="quadrant.front" radius="$Ship.size" angle="45deg"/>
          <move_to object="$Ship" destination="$Ship.zone" uselocalhighways="false" finishonapproach="true" abortpath="true">
            <position value="$_SafePos"/>
          </move_to>
          <remove_value name="$_SafePos"/>
        </do_if>
        <wait exact="1s"/>
        <do_if value="$Ship.sector != $SECTOR">
          <resume label="MOVE_TO_SECTOR_LBL"/>
        </do_if>
      </do_if>

      <find_object name="$_FoundDrops" space="$SECTOR" multiple="true">
        <match class="class.drop"/>
      </find_object>

      <create_list name="$_InventoryDrops"/>
      <do_for_each name="$_FoundDrop" in="$_FoundDrops">
        <do_if value="@$_FoundDrop.wares.list.{1}.isinventory">
          <append_to_list name="$_InventoryDrops" exact="$_FoundDrop"/>
        </do_if>
      </do_for_each>
      <remove_value name="$_FoundDrops"/>

      <do_if value="$_InventoryDrops.count le 0">
        <remove_value name="$_InventoryDrops"/>
        <resume label="IDLE_RETURN_HOME_LBL"/>
      </do_if>

      <do_if value="$_InventoryDrops.count gt 1">
        <sort_list list="$_InventoryDrops" sortbyvalue="$Ship.distanceto.{loop.element}"/>
      </do_if>

      <do_if value="$_InventoryDrops.{1}.iswreck or not $_InventoryDrops.{1}.isoperational or not $_InventoryDrops.{1}.exists">
        <remove_value name="$_InventoryDrops"/>
        <resume label="RESUME_LBL"/>
      </do_if>

      <set_value name="$_InventoryToCollect" exact="$_InventoryDrops.{1}"/>
      <label name="COLLECT_DROPPED_INVENTORY_ITEM"/>
      <create_order id="'JP_GoCollectDroppedInventoryItem'" object="$Ship">
        <param name="DROP" value="$_InventoryToCollect"/>
        <param name="ADD_ORDER_TAG" value="$ADD_ORDER_TAG"/>
        <param name="ORDER_TAG" value="'#CDI-S'"/>
        <param name="DEBUG" value="$DEBUG"/>
      </create_order>
      <remove_value name="$_InventoryToCollect"/>
      <remove_value name="$_InventoryDrops"/>

      <wait exact="1s"/>
      <resume label="RESUME_LBL"/>

      <label name="IDLE_RETURN_HOME_LBL"/>
      <create_order id="'JP_IdleReturnHome_CDI'" object="$Ship">
        <param name="IDLE_TIME" value="$IDLE_TIME"/>
        <param name="IDLE_FOLLOW" value="$IDLE_FOLLOW"/>
        <param name="WHO_TO_FOLLOW" value="$WHO_TO_FOLLOW"/>
        <param name="IDLE_DOCKING" value="$IDLE_DOCKING"/>
        <param name="WHERE_TO_DOCK" value="$WHERE_TO_DOCK"/>
        <param name="IDLE_RANDOM_MOVEMENT" value="$IDLE_RANDOM_MOVEMENT"/>
        <param name="IN_WHICH_SECTOR" value="$IN_WHICH_SECTOR"/>
        <param name="IDLE_MOVE_TO" value="$IDLE_MOVE_TO"/>
        <param name="WHERE_TO_MOVE" value="$WHERE_TO_MOVE"/>
        <param name="ADD_ORDER_TAG" value="$ADD_ORDER_TAG"/>
        <param name="ORDER_TAG" value="'#CDI-S'"/>
        <param name="DEBUG" value="$DEBUG"/>
      </create_order>
      <wait exact="1s"/>
      <resume label="RESUME_LBL"/>

      <label name="FINISH_LBL"/>

      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->

      <do_if value="$DEBUG gt 0">
        <debug_to_file directory="$DebugDirectory" name="$DebugFileName" text="'[' + player.systemtime.{'%F - %X'} + '] ' + '~~ JP_CollectDroppedInventory.xml ~ Finished ~~'"/>
        <debug_to_file directory="$DebugDirectory" name="$DebugFileName" text="'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~\n'"/>
      </do_if>

      <label name="CLEANUP_LBL"/>
      <do_if value="$ADD_ORDER_TAG">
        <set_value name="$_ShipName" exact="$Ship.knownname"/>
        <substitute_text source="$_ShipName" text="$_ShipName">
          <replace string="'\033#FFA95908# #CDI-S\033X'" with="''"/>
        </substitute_text>
        <set_object_name object="this.ship" name="$_ShipName"/>
        <remove_value name="$_ShipName"/>
      </do_if>
      <remove_value name="$Ship"/>
      <do_if value="$DEBUG gt 0">
        <remove_value name="$DebugFileName"/>
        <remove_value name="$DebugDirectory"/>
      </do_if>

      <label name="END_LBL"/>
      <wait exact="1s"/>
      <set_order_syncpoint_reached order="this.ship.order"/>
      <cancel_order order="this.ship.order" />

    </actions>
  </attention>

  <on_abort>
    <do_if value="$ADD_ORDER_TAG">
      <set_value name="$_ShipName" exact="$Ship.knownname"/>
      <substitute_text source="$_ShipName" text="$_ShipName">
        <replace string="'\033#FFA95908# #CDI-S\033X'" with="''"/>
      </substitute_text>
      <set_object_name object="this.ship" name="$_ShipName"/>
      <remove_value name="$_ShipName"/>
    </do_if>
  </on_abort>

</aiscript>