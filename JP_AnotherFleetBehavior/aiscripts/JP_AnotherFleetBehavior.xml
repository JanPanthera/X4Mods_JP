<?xml version="1.0" encoding="utf-8"?>

<aiscript name="JP_AnotherFleetBehavior" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="aiscripts.xsd" version="1">

  <order id="JP_AnotherFleetBehavior" name="AnotherFleetBehavior JP" description="Another fleet behavior than default." category="combat" infinite="true">
    <params>
      <!-- MOD PARAMS -->
      <param name="STAY_DOCKED" text="Stay Docked" type="bool" default="false">
        <editable/>
      </param>
      <param name="MOVE_TO_TARGED" text="Move to Targed" type="bool" default="false">
        <editable/>
      </param>
      <param name="TARGED" text="Attacker Targed" type="object" default="null">
        <editable/>
      </param>
      <param name="REPAIR_THRESHOLD" text="Repair Threshold" type="number" default="90">
        <input_param name="step" value="1"/>
        <input_param name="min" value="1"/>
        <input_param name="max" value="100"/>
        <editable/>
      </param>
      <param name="COMMANDER_SHIELD_THRESHOLD" text="Commander Shield Threshold" type="number" default="30">
        <input_param name="step" value="1"/>
        <input_param name="min" value="1"/>
        <input_param name="max" value="100"/>
        <editable/>
      </param>
      <param name="INTERCEPTION_RANGE" text="InterceptionRange" type="length" default="this.ship.maxradarrange">
        <input_param name="step" value="1km"/>
        <input_param name="min" value="1km"/>
        <input_param name="max" value="this.ship.maxradarrange"/>
        <editable/>
      </param>
      <!-- DEBUG -->
      <param name="DEBUG" text="DebugText" type="number" default="0.0" advanced="1">
        <input_param name="step" value="0.1"/>
        <input_param name="min" value="0.0"/>
        <input_param name="max" value="1.0"/>
      </param>
    </params>
    <skill min="0"/>
    <requires>
      <match shiptype="shiptype.lasertower" negate="true"/>
    </requires>
  </order>

  <interrupts>
    <handler ref="ScannedHandler"/>
    <handler ref="SectorChangeHandler"/>
    <handler ref="TargetInvalidHandler"/>
    <handler ref="AttackHandler"/>
    <handler ref="MissileLockHandler"/>
    <handler ref="ScannedHandler"/>
    <handler ref="InspectedHandler"/>
    <handler ref="FoundAbandonedHandler"/>
    <handler ref="FoundLockboxHandler"/>
    <handler ref="ResupplyHandler"/>
    <handler ref="JobRemoveRequestHandler"/>
  </interrupts>

  <init>
    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    <set_value name="$DebugDirectory" exact="'JP_AnotherFleetBehavior.logs'"/>
    <set_value name="$DebugFileName" exact="'JP_AnotherFleetBehavior' + '.log'"/>
    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    <set_value name="$FleetCommander" exact="this.assignedcontrolled"/>
    <set_value name="$ResupplyShip" exact="null"/>
    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    <!-- ~~~ Initialize Fleet -->
    <do_for_each name="$Subordinate" in="$FleetCommander.subordinates">
      <do_if value="$Subordinate.isunit">
        <continue/>
      </do_if>
      <cancel_all_orders object="$Subordinate"/>
      <!-- Resupplyer -->
      <do_if value="$Subordinate.type == shiptype.resupplier">
        <do_if value="$ResupplyShip == null">
          <set_value name="$ResupplyShip" exact="$Subordinate"/>
        </do_if>
        <create_order object="$Subordinate" id="'SupplyFleet'" immediate="true" default="true">
          <param name="target" value="$FleetCommander"/>
        </create_order>
        <continue/>
      </do_if>
      <!-- Any other Subordinate -->
      <create_order object="$Subordinate" id="'JP_Go_WaitForOrders'" immediate="true" default="true">
        <param name="OBJECT_TO_DOCK" value="$FleetCommander"/>
      </create_order>
    </do_for_each>
    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
  </init>

  <attention min="unknown">
    <actions>
      <wait exact="1ms"/>
      <label name="INIT"/>
      <cancel_all_orders object="$FleetCommander"/>

      <do_if value="$DEBUG gt 0.0">
        <debug_to_file append="false" directory="$DebugDirectory" name="$DebugFileName" text="'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~'"/>
        <debug_to_file directory="$DebugDirectory" name="$DebugFileName" text="'[' + player.systemtime.{'%F - %X'} + '] ' + '~~ Running JP_AnotherFleetBehavior ~~' + '\n'"/>
      </do_if>

      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->

      <label name="RESUME"/>

      <set_value name="$FriendlySmallInterceptorCount" exact="0"/>
      <set_value name="$FriendlyLargeInterceptorCount" exact="0"/>

      <do_for_each name="$Subordinate" in="$FleetCommander.subordinates">
        <do_if value="$Subordinate.isunit or $Subordinate.type == shiptype.carrier or $Subordinate.type == shiptype.resupplier">
          <continue/>
        </do_if>
        <do_if value="$Subordinate.assignment == assignment.interception">
          <do_if value="$Subordinate.class" list="[class.ship_s, class.ship_m]">
            <set_value name="$FriendlySmallInterceptorCount" operation="add" exact="1"/>
          </do_if>
          <do_else>
            <set_value name="$FriendlyLargeInterceptorCount" operation="add" exact="1"/>
          </do_else>
        </do_if>
      </do_for_each>

      <!-- Is $TARGED is a wreck set it to null -->
      <do_if value="@$TARGED != null">
        <check_object object="@$TARGED" result="$IsTargedGood">
          <match checkoperational="true"/>
        </check_object>
        <do_if value="not $IsTargedGood">
          <set_value name="$TARGED" exact="null"/>
        </do_if>
      </do_if>

      <set_value name="$SendAttacker" exact="false"/>
      <do_if value="$TARGED != null">
        <do_if value="$TARGED.sector != $FleetCommander.sector">
          <do_if value="MOVE_TO_TARGED">
            <!-- Reacall all subordinates -->
            <run_script name="'order.recall.subordinates'">
              <param name="activepatrol" value="false"/>
              <param name="safetodockat" value="$FleetCommander"/>
              <param name="debugchance" value="0"/>
            </run_script>
            <!-- Are we in the right sector? (Blocking) -->
            <run_script name="'JP_AreWeInTheRightSector'">
              <param name="SHIP" value="$FleetCommander"/>
              <param name="SECTOR" value="$FleetCommander.sector"/>
              <param name="DEBUG" value="0"/>
            </run_script>
            <set_value name="$SendAttacker" exact="true"/>
          </do_if>
        </do_if>
        <do_else>
          <set_value name="$SendAttacker" exact="true"/>
        </do_else>
      </do_if>
      <set_value name="$SendAttacker" exact="$SendAttacker and not $STAY_DOCKED"/>

      <!-- Are there small enemies near us and are they attacking us? -->
      <run_script name="'JP_IsEnemyNearAndIsAttackingUs'">
        <param name="ENEMY_CLASSES" value="[class.ship_xs, class.ship_s, class.ship_m]"/>
        <param name="LOOKING_RADIUS" value="$INTERCEPTION_RANGE"/>
        <save_retval name="IS_ENEMY_NEAR_AND_IS_ATTACKING_US" variable="$SendInterceptorSmall"/>
        <save_retval name="ENEMY_COUNT" variable="$EnemySmallInterceptorCount"/>
      </run_script>
      <set_value name="$SendInterceptorSmall" exact="$SendInterceptorSmall and not $STAY_DOCKED"/>

      <!-- Are there large enemies near us and are they attacking us? -->
      <run_script name="'JP_IsEnemyNearAndIsAttackingUs'">
        <param name="ENEMY_CLASSES" value="[class.ship_l, class.ship_xl]"/>
        <param name="LOOKING_RADIUS" value="$INTERCEPTION_RANGE"/>
        <save_retval name="IS_ENEMY_NEAR_AND_IS_ATTACKING_US" variable="$SendInterceptorLarge"/>
        <save_retval name="ENEMY_COUNT" variable="$EnemyLargeInterceptorCount"/>
      </run_script>
      <set_value name="$SendInterceptorLarge" exact="$SendInterceptorLarge and not $STAY_DOCKED"/>

      <!-- Sending defenders too? -->
      <set_value name="$SendDefenderSmall" exact="(($EnemySmallInterceptorCount gt $FriendlySmallInterceptorCount) or ($FleetCommander.shieldpercentage lt $COMMANDER_SHIELD_THRESHOLD))"/>
      <set_value name="$SendDefenderLarge" exact="(($EnemyLargeInterceptorCount gt $FriendlyLargeInterceptorCount) or ($FleetCommander.shieldpercentage lt $COMMANDER_SHIELD_THRESHOLD))"/>
      <set_value name="$SendDefenderSmall" exact="$SendDefenderSmall and not $STAY_DOCKED"/>
      <set_value name="$SendDefenderLarge" exact="$SendDefenderLarge and not $STAY_DOCKED"/>

      <remove_value name="$FriendlySmallInterceptorCount"/>
      <remove_value name="$FriendlyLargeInterceptorCount"/>
      <remove_value name="$EnemySmallInterceptorCount"/>
      <remove_value name="$EnemyLargeInterceptorCount"/>

      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->

      <!-- Are any of our ships damaged heavily? repair it.. -->
      <run_script name="'JP_CheckShipsForDamage'">
        <param name="RESUPPLY_SHIP" value="$ResupplyShip"/>
        <param name="HULL_PERCENTAGE" value="$REPAIR_THRESHOLD"/>
        <param name="ONLY_RESUPPLY_SHIP" value="false"/>
      </run_script>

      <do_if value="not $SendInterceptorSmall and not $SendInterceptorLarge and $TARGED == null">
        <!-- Are any of our ships damaged? repair it.. -->
        <run_script name="'JP_CheckShipsForDamage'">
          <param name="RESUPPLY_SHIP" value="$ResupplyShip"/>
          <param name="HULL_PERCENTAGE" value="100"/>
          <param name="ONLY_RESUPPLY_SHIP" value="false"/>
        </run_script>
      </do_if>

      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->

      <do_for_each name="$Subordinate" in="$FleetCommander.subordinates">

        <!-- If Subordinate is a drone, a carrier, a resupplier or has a repair order continue with the next Subordinate -->
        <run_script name="'JP_HasShipOrder'">
          <param name="SHIP" value="$Subordinate"/>
          <param name="ORDER" value="'Repair'"/>
          <save_retval name="HAS_ORDER" variable="$HasRepairOrder"/>
        </run_script>
        <do_if value="$Subordinate.isunit or $Subordinate.type == shiptype.resupplier or $Subordinate.type == shiptype.carrier or $HasRepairOrder">
          <continue/>
        </do_if>

        <!-- Attacker ~~ send all attackers if the targed is specified and not null or already a wreck -->
        <do_if value="$Subordinate.assignment == assignment.attack">
          <do_if value="$SendAttacker and not $Subordinate.subordinategroupdockoverride">
            <run_script name="'JP_HasShipOrder'">
              <param name="SHIP" value="$Subordinate"/>
              <param name="ORDER" value="'DockAndWait'"/>
              <save_retval name="HAS_ORDER" variable="$HasDockAndWaitOrder"/>
            </run_script>
            <do_if value="$HasDockAndWaitOrder">
              <cancel_all_orders object="$Subordinate"/>
            </do_if>
            <do_if value="$Subordinate.defaultorder.id != 'JP_Go_Attack'">
              <create_order object="$Subordinate" id="'JP_Go_Attack'" immediate="true" default="true">
                <param name="TARGED" value="$TARGED"/>
                <param name="INTERCEPTION_RANGE" value="$INTERCEPTION_RANGE"/>
                <param name="DEBUG" value="$DEBUG"/>
              </create_order>
            </do_if>
          </do_if>
          <do_else>
            <do_if value="$Subordinate.defaultorder.id != 'JP_Go_WaitForOrders'">
              <create_order object="$Subordinate" id="'JP_Go_WaitForOrders'" immediate="true" default="true">
                <param name="OBJECT_TO_DOCK" value="$FleetCommander"/>
              </create_order>
            </do_if>
          </do_else>
        </do_if>

        <!-- Defender ~~ send all defenders if our FleetCommander gets heavily damaged -->
        <do_if value="$Subordinate.assignment == assignment.defence">
          <do_if value="(($Subordinate.class == class.ship_s or $Subordinate.class == class.ship_m) and $SendDefenderSmall and not $Subordinate.subordinategroupdockoverride) or
                        (($Subordinate.class == class.ship_l or $Subordinate.class == class.ship_xl) and $SendDefenderLarge and not $Subordinate.subordinategroupdockoverride)">
            <run_script name="'JP_HasShipOrder'">
              <param name="SHIP" value="$Subordinate"/>
              <param name="ORDER" value="'DockAndWait'"/>
              <save_retval name="HAS_ORDER" variable="$HasDockAndWaitOrder"/>
            </run_script>
            <do_if value="$HasDockAndWaitOrder">
              <cancel_all_orders object="$Subordinate"/>
            </do_if>
            <do_if value="$Subordinate.defaultorder.id != 'JP_Go_Defend'">
              <create_order object="$Subordinate" id="'JP_Go_Defend'" immediate="true" default="true">
                <param name="INTERCEPTION_RANGE" value="$INTERCEPTION_RANGE"/>
                <param name="DEBUG" value="$DEBUG"/>
              </create_order>
            </do_if>
          </do_if>
          <do_else>
            <do_if value="$Subordinate.defaultorder.id != 'JP_Go_WaitForOrders'">
              <create_order object="$Subordinate" id="'JP_Go_WaitForOrders'" immediate="true" default="true">
                <param name="OBJECT_TO_DOCK" value="$FleetCommander"/>
              </create_order>
            </do_if>
          </do_else>
        </do_if>

        <!-- Intercepter ~~ send all interceptors if a enemy is in maxradarrange of our FleetCommander and is attacking us -->
        <do_if value="$Subordinate.assignment == assignment.interception">
          <do_if value="(($Subordinate.class == class.ship_s or $Subordinate.class == class.ship_m) and $SendInterceptorSmall and not $Subordinate.subordinategroupdockoverride) or 
                        (($Subordinate.class == class.ship_l or $Subordinate.class == class.ship_xl) and $SendInterceptorLarge and not $Subordinate.subordinategroupdockoverride)">
            <run_script name="'JP_HasShipOrder'">
              <param name="SHIP" value="$Subordinate"/>
              <param name="ORDER" value="'DockAndWait'"/>
              <save_retval name="HAS_ORDER" variable="$HasDockAndWaitOrder"/>
            </run_script>
            <do_if value="$HasDockAndWaitOrder">
              <cancel_all_orders object="$Subordinate"/>
            </do_if>
            <do_if value="$Subordinate.defaultorder.id != 'JP_Go_Intercept'">
              <create_order object="$Subordinate" id="'JP_Go_Intercept'" immediate="true" default="true">
                <param name="INTERCEPTION_RANGE" value="$INTERCEPTION_RANGE"/>
                <param name="DEBUG" value="$DEBUG"/>
              </create_order>
            </do_if>
          </do_if>
          <do_else>
            <do_if value="$Subordinate.defaultorder.id != 'JP_Go_WaitForOrders'">
              <create_order object="$Subordinate" id="'JP_Go_WaitForOrders'" immediate="true" default="true">
                <param name="OBJECT_TO_DOCK" value="$FleetCommander"/>
              </create_order>
            </do_if>
          </do_else>
        </do_if>

      </do_for_each>

      <wait exact="1s"/>
      <resume label="RESUME"/>

      <label name="END"/>

      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->

      <do_if value="$DEBUG gt 0.0">
        <debug_to_file directory="$DebugDirectory" name="$DebugFileName" text="'[' + player.systemtime.{'%F - %X'} + '] ' + '~~ Completed JP_AnotherFleetBehavior ~~'"/>
        <debug_to_file directory="$DebugDirectory" name="$DebugFileName" text="'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~\n'"/>
      </do_if>

      <label name="CLEANUP"/>
      <remove_value name="$ResupplyShip"/>
      <remove_value name="$FleetCommander"/>
      <remove_value name="$DebugFileName"/>
      <remove_value name="$DebugDirectory"/>

      <label name="FINISH"/>
      <set_order_syncpoint_reached order="this.ship.order"/>
      <cancel_order order="this.ship.order" />
      <wait exact="1ms"/>

    </actions>
  </attention>

  <on_abort>
  </on_abort>

</aiscript>