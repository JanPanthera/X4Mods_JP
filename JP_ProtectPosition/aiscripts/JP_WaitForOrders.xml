<?xml version="1.0" encoding="utf-8"?>

<aiscript name="JP_WaitForOrders" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="aiscripts.xsd" version="1">

  <order id="JP_WaitForOrders" name="WaitForOrders JP" description="Simple script that lets a ship dock at an give object and waits for new orders." category="internal" infinite="true">
    <params>
      <!-- Mod Params -->
      <param name="OBJECT_TO_DOCK" text="$ObjectToDock" type="object" default="null"/>
      <!-- DEBUG -->
      <param name="DEBUG" text="DebugText" type="number" default="0" advanced="1">
        <input_param name="step" value="50"/>
        <input_param name="min" value="0"/>
        <input_param name="max" value="100"/>
      </param>
    </params>
    <skill min="0"/>
    <requires>
      <match shiptype="shiptype.lasertower" negate="true"/>
    </requires>
  </order>

  <interrupts>
    <handler ref="ScannedHandler"/>
    <handler ref="SectorChangeHandler"/>
    <handler ref="TargetInvalidHandler"/>
    <handler ref="AttackHandler"/>
    <handler ref="MissileLockHandler"/>
    <handler ref="ScannedHandler"/>
    <handler ref="InspectedHandler"/>
    <handler ref="FoundAbandonedHandler"/>
    <handler ref="FoundLockboxHandler"/>
    <handler ref="ResupplyHandler"/>
    <handler ref="JobRemoveRequestHandler"/>
  </interrupts>

  <init>
    <set_value name="$DebugDirectory" exact="'JP_WaitForOrders.logs'"/>
    <set_value name="$DebugFileName" exact="this.ship.idcode + '.JP_WaitForOrders' + '.log'"/>
    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    <set_value name="$FleetCommander" exact="this.ship.fleet.commander"/>
    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
  </init>

  <attention min="unknown">
    <actions>

      <wait exact="1ms"/>
      <label name="INIT"/>

      <do_if value="$DEBUG gt 0">
        <debug_to_file append="false" directory="$DebugDirectory" name="$DebugFileName" text="'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~'"/>
        <debug_to_file directory="$DebugDirectory" name="$DebugFileName" text="'[' + player.systemtime.{'%F - %X'} + '] ' + '~~ Running JP_WaitForOrders ~~' + '\n'"/>
      </do_if>

      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->

      <label name="RESUME"/>

      <do_if value="this.ship.class" list="[class.ship_s, class.ship_m]">
        <set_value name="$HasDockOrder" exact="false"/>
        <do_for_each name="$Order" in="this.ship.orders">
          <do_if value="$Order.id == 'DockAndWait'">
            <set_value name="$HasDockOrder" exact="true"/>
            <break/>
          </do_if>
        </do_for_each>
        <do_if value="not $HasDockOrder">
          <create_order object="this.ship" id="'DockAndWait'" immediate="true">
            <param name="destination" value="$FleetCommander"/>
          </create_order>
        </do_if>
      </do_if>
      <do_elseif value="this.ship.class" list="[class.ship_l, class.ship_xl]">
        <set_value name="$HasFollowOrder" exact="false"/>
        <do_for_each name="$Order" in="this.ship.orders">
          <do_if value="$Order.id == 'Follow'">
            <set_value name="$HasFollowOrder" exact="true"/>
            <break/>
          </do_if>
        </do_for_each>
        <do_if value="not $HasFollowOrder">
          <do_if value="not this.ship.isformationwingman">
            <do_if value="$FleetCommander.isformationleader">
              <join_formation object="this.ship" leader="$FleetCommander"/>
            </do_if>
            <do_else>
              <create_formation leader="$FleetCommander" follower="this.ship" formation="formationshape.pointguard" param="$FleetCommander.formationradius * 2"/>
            </do_else>
          </do_if>
          <create_order object="this.ship" id="'Follow'" immediate="true" default="true">
            <param name="target" value="$FleetCommander"/>
          </create_order>
        </do_if>
      </do_elseif>

      <wait exact="1ms"/>
      <resume label="RESUME"/>

      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->

      <do_if value="$DEBUG gt 0">
        <debug_to_file directory="$DebugDirectory" name="$DebugFileName" text="'[' + player.systemtime.{'%F - %X'} + '] ' + '~~ Completed JP_WaitForOrders ~~'"/>
        <debug_to_file directory="$DebugDirectory" name="$DebugFileName" text="'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~\n'"/>
      </do_if>

      <label name="CLEANUP"/>
      <remove_value name="$HasDockOrder"/>
      <remove_value name="$HasFollowOrder"/>
      <remove_value name="$FleetCommander"/>
      <remove_value name="$DebugFileName"/>
      <remove_value name="$DebugDirectory"/>

      <label name="FINISH"/>
      <set_order_syncpoint_reached order="this.ship.order"/>
      <cancel_order order="this.ship.order" />
      <wait exact="1ms"/>

    </actions>
  </attention>

  <on_abort>
  </on_abort>

</aiscript>