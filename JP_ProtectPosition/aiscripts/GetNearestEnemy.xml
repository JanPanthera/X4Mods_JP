<?xml version="1.0" encoding="utf-8"?>

<aiscript name="JP_GetNearestEnemy" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="aiscripts.xsd" version="1">

  <order id="JP_GetNearestEnemy" name="GetNearestEnemy JP" description="Get nearest enemy with CLASSES[] and in RANGE." category="internal" infinite="false">
    <params>
      <!-- Mod Params -->
      <param name="RANGE" text="Range" type="length" default="20km"/>
      <param name="CLASSES" text="Classes" type="list" default="[class.ship_xs, class.ship_s, class.ship_m, class.ship_l, class.ship_xl]"/>
      <param name="CENTER_POSITION" text="CenterPosition" type="position" default="this.ship.position"/>
      <param name="RANDOMIZE_TARGETS_CHOOSING" text="RandomizeTargetsChoosing" type="bool" default="true"/>
      <!-- DEBUG -->
      <param name="DEBUG" text="DebugText" type="number" default="0" advanced="1">
        <input_param name="step" value="50"/>
        <input_param name="min" value="0"/>
        <input_param name="max" value="100"/>
      </param>
    </params>
    <skill min="0"/>
    <requires>
      <match shiptype="shiptype.lasertower" negate="true"/>
    </requires>
  </order>

  <interrupts>
    <handler ref="ScannedHandler"/>
    <handler ref="SectorChangeHandler"/>
    <handler ref="TargetInvalidHandler"/>
    <handler ref="AttackHandler"/>
    <handler ref="MissileLockHandler"/>
    <handler ref="ScannedHandler"/>
    <handler ref="InspectedHandler"/>
    <handler ref="FoundAbandonedHandler"/>
    <handler ref="FoundLockboxHandler"/>
    <handler ref="ResupplyHandler"/>
    <handler ref="JobRemoveRequestHandler"/>
  </interrupts>

  <init>
    <set_value name="$DebugDirectory" exact="'JP_GetNearestEnemy.logs'"/>
    <set_value name="$DebugFileName" exact="this.ship.idcode + '.JP_GetNearestEnemy' + '.log'"/>
    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    <set_value name="$FleetCommander" exact="this.ship.fleet.commander"/>
    <set_value name="$NearestEnemy" exact="null"/>
    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
  </init>

  <attention min="unknown">
    <actions>

      <wait exact="1ms"/>
      <label name="INIT"/>


      <do_if value="$DEBUG gt 0">
        <debug_to_file append="false" directory="$DebugDirectory" name="$DebugFileName" text="'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~'"/>
        <debug_to_file directory="$DebugDirectory" name="$DebugFileName" text="'[' + player.systemtime.{'%F - %X'} + '] ' + '~~ Running JP_GetNearestEnemy ~~ %1 [%2]'.[this.ship.knownname, this.ship.idcode] + '\n'"/>
      </do_if>

      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->

      <!-- Find enemys by given class -->
      <create_list name="$TempFoundEnemyObjects"/>
      <find_object name="$TempFoundEnemyObjects" space="$FleetCommander.sector" multiple="true">
        <match class="$CLASSES"/>
        <match knownto="$FleetCommander.owner"/>
        <match mayattack="this.ship"/>
        <match functional="true"/>
        <match checkoperational="true"/>
      </find_object>

      <create_list name="$FoundEnemys"/>
      <!-- Filter found enemys by given range -->
      <do_if value="$TempFoundEnemyObjects.count gt 0">
        <do_for_each name="$FoundEnemy" in="$TempFoundEnemyObjects">
          <do_if value="$FoundEnemy.distanceto.{$FleetCommander} lt $RANGE">
            <append_to_list name="$FoundEnemys" exact="$FoundEnemy"/>
          </do_if>
        </do_for_each>
      </do_if>

      <do_if value="$FoundEnemys.count gt 0">
        <do_if value="$FoundEnemys.count gt 1 and @this.ship.assignment != null">
          <do_if value="this.ship.assignment == assignment.attack">
            <sort_list list="$FoundEnemys" sortbyvalue="loop.element.distanceto.{this.ship}"/>
          </do_if>
          <do_elseif value="this.ship.assignment == assignment.defence">
            <sort_list list="$FoundEnemys" sortbyvalue="loop.element.distanceto.{this.ship}"/>
          </do_elseif>
          <do_elseif value="this.ship.assignment == assignment.interception">
            <sort_list list="$FoundEnemys" sortbyvalue="loop.element.distanceto.{$FleetCommander}"/>
          </do_elseif>
        </do_if>

        <do_if value="$FoundEnemys.count gt 6 and $RANDOMIZE_TARGETS_CHOOSING">
          <do_any>
            <set_value name="$NearestEnemy" exact="$FoundEnemys.{1}" weight="16.6"/>
            <set_value name="$NearestEnemy" exact="$FoundEnemys.{2}" weight="16.6"/>
            <set_value name="$NearestEnemy" exact="$FoundEnemys.{3}" weight="16.6"/>
            <set_value name="$NearestEnemy" exact="$FoundEnemys.{4}" weight="16.6"/>
            <set_value name="$NearestEnemy" exact="$FoundEnemys.{5}" weight="16.6"/>
            <set_value name="$NearestEnemy" exact="$FoundEnemys.{6}" weight="16.6"/>
          </do_any>
        </do_if>
        <do_elseif value="$FoundEnemys.count gt 5 and $RANDOMIZE_TARGETS_CHOOSING">
          <do_any>
            <set_value name="$NearestEnemy" exact="$FoundEnemys.{1}" weight="20"/>
            <set_value name="$NearestEnemy" exact="$FoundEnemys.{2}" weight="20"/>
            <set_value name="$NearestEnemy" exact="$FoundEnemys.{3}" weight="20"/>
            <set_value name="$NearestEnemy" exact="$FoundEnemys.{4}" weight="20"/>
            <set_value name="$NearestEnemy" exact="$FoundEnemys.{5}" weight="20"/>
          </do_any>
        </do_elseif>
        <do_elseif value="$FoundEnemys.count gt 4 and $RANDOMIZE_TARGETS_CHOOSING">
          <do_any>
            <set_value name="$NearestEnemy" exact="$FoundEnemys.{1}" weight="25"/>
            <set_value name="$NearestEnemy" exact="$FoundEnemys.{2}" weight="25"/>
            <set_value name="$NearestEnemy" exact="$FoundEnemys.{3}" weight="25"/>
            <set_value name="$NearestEnemy" exact="$FoundEnemys.{4}" weight="25"/>
          </do_any>
        </do_elseif>
        <do_elseif value="$FoundEnemys.count gt 3 and $RANDOMIZE_TARGETS_CHOOSING">
          <do_any>
            <set_value name="$NearestEnemy" exact="$FoundEnemys.{1}" weight="33"/>
            <set_value name="$NearestEnemy" exact="$FoundEnemys.{2}" weight="33"/>
            <set_value name="$NearestEnemy" exact="$FoundEnemys.{3}" weight="33"/>
          </do_any>
        </do_elseif>
        <do_elseif value="$FoundEnemys.count gt 2 and $RANDOMIZE_TARGETS_CHOOSING">
          <do_any>
            <set_value name="$NearestEnemy" exact="$FoundEnemys.{1}" weight="50"/>
            <set_value name="$NearestEnemy" exact="$FoundEnemys.{2}" weight="50"/>
          </do_any>
        </do_elseif>
        <do_else>
          <set_value name="$NearestEnemy" exact="$FoundEnemys.{1}"/>
        </do_else>

      </do_if>

      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->

      <do_if value="$DEBUG gt 0">
        <debug_to_file directory="$DebugDirectory" name="$DebugFileName" text="'[' + player.systemtime.{'%F - %X'} + '] ' + '~~ Completed JP_GetNearestEnemy ~~ %1 [%2]'.[this.ship.knownname, this.ship.idcode]"/>
        <debug_to_file directory="$DebugDirectory" name="$DebugFileName" text="'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~\n'"/>
      </do_if>

      <label name="CLEANUP"/>
      <remove_value name="$FleetCommander"/>
      <remove_value name="$DebugFileName"/>
      <remove_value name="$DebugDirectory"/>

      <label name="FINISH"/>
      <wait exact="1ms"/>

      <return>
        <retval name="NEAREST_ENEMY" value="$NearestEnemy"/>
      </return>

    </actions>
  </attention>

  <on_abort>
  </on_abort>

</aiscript>