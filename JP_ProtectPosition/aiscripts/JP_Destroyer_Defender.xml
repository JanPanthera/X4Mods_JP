<?xml version="1.0" encoding="utf-8"?>

<aiscript name="JP_Destroyer_Defender" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="aiscripts.xsd" version="1">

  <order id="JP_Destroyer_Defender" name="Destroyer_Defender JP" description="Another logic for a destroyer defender ship." category="internal" infinite="true">
    <params>
      <!-- Mod Params -->
      <param name="RANDOMIZE_TARGETS_CHOOSING" text="RandomizeTargetsChoosing" type="bool" default="true"/>
      <param name="PROTECTING_RADIUS" text="ProtectingRadius" type="length" default="20km">
        <input_param name="step" value="1km"/>
        <input_param name="min" value="1km"/>
        <input_param name="max" value="300km"/>
      </param>
      <!-- DEBUG -->
      <param name="DEBUG" text="DebugText" type="number" default="0" advanced="1">
        <input_param name="step" value="50"/>
        <input_param name="min" value="0"/>
        <input_param name="max" value="100"/>
      </param>
    </params>
    <skill min="0"/>
    <requires>
      <match shiptype="shiptype.lasertower" negate="true"/>
    </requires>
  </order>

  <interrupts>
    <handler ref="ScannedHandler"/>
    <handler ref="SectorChangeHandler"/>
    <handler ref="TargetInvalidHandler"/>
    <handler ref="AttackHandler"/>
    <handler ref="MissileLockHandler"/>
    <handler ref="ScannedHandler"/>
    <handler ref="InspectedHandler"/>
    <handler ref="FoundAbandonedHandler"/>
    <handler ref="FoundLockboxHandler"/>
    <handler ref="ResupplyHandler"/>
    <handler ref="JobRemoveRequestHandler"/>
  </interrupts>

  <init>
    <set_value name="$DebugDirectory" exact="'JP_Destroyer_Defender.logs'"/>
    <set_value name="$DebugFileName" exact="this.ship.idcode + '.JP_Destroyer_Defender' + '.log'"/>
    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    <set_value name="$FleetCommander" exact="this.ship.fleet.commander"/>
    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
  </init>

  <attention min="unknown">
    <actions>

      <wait exact="1ms"/>
      <label name="INIT"/>


      <do_if value="$DEBUG gt 0">
        <debug_to_file append="false" directory="$DebugDirectory" name="$DebugFileName" text="'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~'"/>
        <debug_to_file directory="$DebugDirectory" name="$DebugFileName" text="'[' + player.systemtime.{'%F - %X'} + '] ' + '~~ Running JP_Destroyer_Defender ~~ %1 [%2]'.[this.ship.knownname, this.ship.idcode] + '\n'"/>
      </do_if>

      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->

      <label name="RESUME"/>

      <set_value name="$HasAlreadyAttackOrder" exact="false"/>
      <do_for_each name="$Order" in="this.ship.orders">
        <do_if value="$Order.id == 'Attack'">
          <set_value name="$HasAlreadyAttackOrder" exact="true"/>
          <break/>
        </do_if>
      </do_for_each>

      <do_if value="$HasAlreadyAttackOrder == false">
        
        <run_script name="'JP_GetNearestEnemy'">
          <param name="RANGE" value="$PROTECTING_RADIUS"/>
          <param name="CLASSES" value="[class.ship_l, class.ship_xl]"/>
          <param name="CENTER_POSITION" value="$FleetCommander.position"/>
          <param name="RANDOMIZE_TARGETS_CHOOSING" value="$RANDOMIZE_TARGETS_CHOOSING"/>
          <save_retval name="NEAREST_ENEMY" variable="$NearestEnemy"/>
        </run_script>

        <do_if value="$NearestEnemy == null">
          <do_if value="not this.ship.isformationwingman">
            <do_if value="$FleetCommander.isformationleader">
              <join_formation object="this.ship" leader="$FleetCommander"/>
            </do_if>
            <do_else>
              <create_formation leader="$FleetCommander" follower="this.ship" formation="formationshape.pointguard" param="$FleetCommander.formationradius"/>
            </do_else>
          </do_if>
          <do_if value="this.ship.defaultorder.id != 'Follow'">
            <create_order object="this.ship" id="'Follow'" immediate="true" default="true">
              <param name="target" value="$FleetCommander"/>
            </create_order>
          </do_if>
        </do_if>
        <do_else>
          <create_order object="this.ship" id="'Attack'" immediate="true">
            <param name="radius" value="$PROTECTING_RADIUS"/>
            <param name="escort" value="$FleetCommander"/>
            <param name="primarytarget" value="$NearestEnemy"/>
            <param name="pursuetargets" value="false"/>
          </create_order>
        </do_else>
      </do_if>

      <wait exact="1ms"/>
      <resume label="RESUME"/>

      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->

      <do_if value="$DEBUG gt 0">
        <debug_to_file directory="$DebugDirectory" name="$DebugFileName" text="'[' + player.systemtime.{'%F - %X'} + '] ' + '~~ Completed JP_Destroyer_Defender ~~ %1 [%2]'.[this.ship.knownname, this.ship.idcode]"/>
        <debug_to_file directory="$DebugDirectory" name="$DebugFileName" text="'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~\n'"/>
      </do_if>

      <label name="CLEANUP"/>
      <remove_value name="$FleetCommander"/>
      <remove_value name="$DebugFileName"/>
      <remove_value name="$DebugDirectory"/>

      <label name="FINISH"/>
      <set_order_syncpoint_reached order="this.ship.order"/>
      <cancel_order order="this.ship.order" />
      <wait exact="1ms"/>

    </actions>
  </attention>

  <on_abort>
  </on_abort>

</aiscript>