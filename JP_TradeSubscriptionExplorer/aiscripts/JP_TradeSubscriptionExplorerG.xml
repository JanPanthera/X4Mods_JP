<?xml version="1.0" encoding="utf-8"?>

<aiscript name="JP_TradeSubscriptionExplorerG" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="aiscripts.xsd" version="1">

  <order id="JP_TradeSubscriptionExplorerG" name="_{8888888, 1997}TradeSubscriptionExplorer - {8888888, 1999}{8888888, 1998}{20001, 901}{8888888, 1999}" category="navigation" infinite="true">
    <params>
      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
      <param name="PLACE_HOLDER_000" text="----------------------------------" type="object" default="null">
        <input_param name="class" value="[]"/>
      </param>
      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
      <param name="IDLE" text="{8888888, 480}" comment="Idle actions?" type="bool" default="if global.$TradeSubscriptionExplorerG_Settings? then global.$TradeSubscriptionExplorerG_Settings.{1} else true"/>
      <param name="IDLE_TIME" text="{8888888, 481}" comment="Idle Time" type="time" default="if global.$TradeSubscriptionExplorerG_Settings? then global.$TradeSubscriptionExplorerG_Settings.{2} else 600s">
        <input_param name="min" value="60s"/>
        <input_param name="max" value="3600s"/>
        <input_param name="step" value="10s"/>
      </param>
      <param name="IDLE_FOLLOW" text="{8888888, 482}" comment="Idle: Follow?" type="bool" default="if global.$TradeSubscriptionExplorerG_Settings? then global.$TradeSubscriptionExplorerG_Settings.{3} else false"/>
      <param name="WHO_TO_FOLLOW" text="- {8888888, 483}" comment="Who to follow?" type="object" default="if global.$TradeSubscriptionExplorerG_Settings? then global.$TradeSubscriptionExplorerG_Settings.{4} else null">
        <input_param name="class" value="[class.ship]"/>
        <input_param name="owner" value="this.ship.owner"/>
      </param>
      <param name="IDLE_DOCKING" text="{8888888, 484}" comment="Idle: Docking?" type="bool" default="if global.$TradeSubscriptionExplorerG_Settings? then global.$TradeSubscriptionExplorerG_Settings.{5} else false"/>
      <param name="WHERE_TO_DOCK" text="- {8888888, 485}" comment="Where to dock?" type="object" default="if global.$TradeSubscriptionExplorerG_Settings? then global.$TradeSubscriptionExplorerG_Settings.{6} else null">
        <input_param name="class" value="if this.ship.isclass.[class.ship_s, class.ship_xs] then [class.station, class.ship_m, class.ship_l, class.ship_xl] else [class.station, class.ship_l, class.ship_xl]"/>
      </param>
      <param name="IDLE_RANDOM_MOVEMENT" text="{8888888, 486}" comment="Idle: Movement?" type="bool" default="if global.$TradeSubscriptionExplorerG_Settings? then global.$TradeSubscriptionExplorerG_Settings.{7} else false"/>
      <param name="IN_WHICH_SECTOR" text="- {8888888, 487}" comment="In which sector?" type="position" default="if global.$TradeSubscriptionExplorerG_Settings? then global.$TradeSubscriptionExplorerG_Settings.{8} else [this.ship.sector, this.ship.position]">
        <input_param name="class" value="class.sector"/>
      </param>
      <param name="IDLE_MOVE_TO" text="{8888888, 488}" comment="Idle: Move to?" type="bool" default="if global.$TradeSubscriptionExplorerG_Settings? then global.$TradeSubscriptionExplorerG_Settings.{9} else false"/>
      <param name="WHERE_TO_MOVE" text="- {8888888, 489}" comment="Where to move?" type="position" default="if global.$TradeSubscriptionExplorerG_Settings? then global.$TradeSubscriptionExplorerG_Settings.{10} else [this.ship.sector, this.ship.position]">
        <input_param name="class" value="class.sector"/>
      </param>
      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
      <param name="PLACE_HOLDER_997" text="----------------------------------" type="object" default="null">
        <input_param name="class" value="[]"/>
      </param>
      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
      <param name="ADD_ORDER_TAG" text="{8888888, 491}" comment="Add order tag?" type="bool" default="if global.$TradeSubscriptionExplorerG_Settings? then global.$TradeSubscriptionExplorerG_Settings.{11} else true"/>
      <param name="ORDER_TAG_POSITION" text="{8888888, 492}" comment="Order tag position" type="number" default="if global.$TradeSubscriptionExplorerG_Settings? then global.$TradeSubscriptionExplorerG_Settings.{12} else 1">
        <input_param name="min" value="0"/>
        <input_param name="max" value="1"/>
        <input_param name="step" value="1"/>
      </param>
      <param name="SAVE_ORDER_SETTINGS" text="{8888888, 493}" comment="Save Order Settings?" type="bool" default="false"/>
      <param name="RESET_ORDER_SETTINGS" text="{8888888, 494}" comment="Reset Order Settings?" type="bool" default="false"/>
      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
      <param name="PLACE_HOLDER_998" text="----------------------------------" type="object" default="null">
        <input_param name="class" value="[]"/>
      </param>
      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
      <param name="DEBUG" text="Debug" type="number" default="if global.$TradeSubscriptionExplorerG_Settings? then global.$TradeSubscriptionExplorerG_Settings.{13} else 0" advanced="true">
        <input_param name="step" value="100"/>
        <input_param name="min" value="0"/>
        <input_param name="max" value="100"/>
      </param>
      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
      <param name="PLACE_HOLDER_999" text="----------------------------------" type="object" default="null" advanced="true">
        <input_param name="class" value="[]"/>
      </param>
      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    </params>
    <skill min="35"/>
    <requires>
      <match shiptype="shiptype.lasertower" negate="true"/>
    </requires>
  </order>

  <interrupts>
    <handler ref="SectorChangeHandler"/>
    <handler ref="TargetInvalidHandler"/>
    <handler ref="AttackHandler"/>
    <handler ref="MissileLockHandler"/>
    <handler ref="ScannedHandler"/>
    <handler ref="InspectedHandler"/>
    <handler ref="FoundAbandonedHandler"/>
    <handler ref="FoundLockboxHandler"/>
    <handler ref="ResupplyHandler"/>
    <handler ref="JobRemoveRequestHandler"/>
  </interrupts>

  <init>
    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    <set_value name="$Ship" exact="this.ship"/>
    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    <do_if value="$DEBUG">
      <set_value name="$DebugFolderName" exact="'JP_TradeSubscriptionExplorer.logs'"/>
      <set_value name="$DebugScriptName" exact="'JP_TradeSubscriptionExplorerG'"/>
      <set_value name="$DebugFileName" exact="$Ship.idcode + '.' + $DebugScriptName + '.xml.log'"/>
      <debug_to_file directory="$DebugFolderName" name="$DebugFileName" text="'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~'" append="false"/>
      <debug_to_file directory="$DebugFolderName" name="$DebugFileName" text="'[' + player.systemtime.{'%F - %X'} + '] ' + '~~ ' + $DebugScriptName + '.xml ~ Started ~~' + '\n'"/>
    </do_if>
    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    <do_if value="$SAVE_ORDER_SETTINGS">
      <create_list name="$_SettingsList"/>
      <append_list_elements name="$_SettingsList" other="[
                            $IDLE, $IDLE_TIME, $IDLE_FOLLOW, $WHO_TO_FOLLOW, $IDLE_DOCKING, $WHERE_TO_DOCK,
                            $IDLE_RANDOM_MOVEMENT, $IN_WHICH_SECTOR, $IDLE_MOVE_TO, $WHERE_TO_MOVE,
                            $ADD_ORDER_TAG, $ORDER_TAG_POSITION, $DEBUG]"/>
      <do_if value="not global.$TradeSubscriptionExplorerG_Settings?">
        <create_list name="global.$TradeSubscriptionExplorerG_Settings"/>
        <append_list_elements name="global.$TradeSubscriptionExplorerG_Settings" other="$_SettingsList"/>
      </do_if>
      <do_else>
        <do_for_each name="$_Setting" in="global.$TradeSubscriptionExplorerG_Settings" counter="$_it">
          <do_if value="$_Setting != $_SettingsList.{$_it}">
            <set_value name="global.$TradeSubscriptionExplorerG_Settings.{$_it}" exact="$_SettingsList.{$_it}"/>
          </do_if>
        </do_for_each>
      </do_else>
      <remove_value name="$_SettingsList"/>
      <show_help duration="5s" allowclose="true" log="true" custom="'JP_TradeSubscriptionExplorerG' + ' ~\n' + $Ship.knownname + ' [' + $Ship.idcode + ']\n\n' + '{8888888, 1995}'"/>
      <set_value name="$Quit" exact="true"/>
    </do_if>
    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    <do_if value="$RESET_ORDER_SETTINGS">
      <do_if value="global.$TradeSubscriptionExplorerG_Settings?">
        <remove_value name="global.$TradeSubscriptionExplorerG_Settings"/>
      </do_if>
      <show_help duration="5s" allowclose="true" log="true" custom="'JP_TradeSubscriptionExplorerG' + ' ~\n' + $Ship.knownname + ' [' + $Ship.idcode + ']\n\n' + '{8888888, 1996}'"/>
      <set_value name="$Quit" exact="true"/>
    </do_if>
    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    <!-- Give time for deleteing this unused junk of memory -->
    <do_if value="true">
      <remove_value name="global.$DebugTSE"/>
      <remove_value name="global.$WhereToMoveTSE"/>
      <remove_value name="global.$IdleMoveToTSE"/>
      <remove_value name="global.$InWhichSectorTSE"/>
      <remove_value name="global.$IdleRandomMovementTSE"/>
      <remove_value name="global.$WhereToDockTSE"/>
      <remove_value name="global.$IdleDockingTSE"/>
      <remove_value name="global.$WhoToFollowTSE"/>
      <remove_value name="global.$IdleFollowTSE"/>
      <remove_value name="global.$IdleTimeTSE"/>
      <remove_value name="global.$ColorAutoFleetNameTSE"/>
      <remove_value name="global.$AutoFleetNameAlphaTSE"/>
      <remove_value name="global.$AutoFleetNameRedTSE"/>
      <remove_value name="global.$AutoFleetNameGreenTSE"/>
      <remove_value name="global.$AutoFleetNameBlueTSE"/>
      <remove_value name="global.$AutoFleetTSE"/>
      <remove_value name="global.$AddOrderTagTSE"/>
      <remove_value name="global.$FriendlySectorsTSE"/>
      <remove_value name="global.$NeutralSectorsTSE"/>
      <remove_value name="global.$EnemySectorsTSE"/>
      <remove_value name="this.$CurrentSectorTSE"/>
      <remove_value name="global.$CurrentSectorTSE"/>
      <remove_value name="this.$CurrentSector"/>
      <remove_value name="this.$FoundStations"/>
    </do_if>
    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
  </init>

  <attention min="unknown">
    <actions>

      <do_if value="$Quit?">
        <resume label="FINISH_LBL"/>
      </do_if>

      <label name="INIT_LBL"/>
      <wait min="500ms" max="1000ms"/>

      <do_if value="not global.$TradeSubscriptionExplorerSectorBlack_List?">
        <create_list name="global.$TradeSubscriptionExplorerSectorBlack_List"/>
      </do_if>

      <do_if value="not global.$TradeSubscriptionExplorerShips_Table?">
        <set_value name="global.$TradeSubscriptionExplorerShips_Table" exact="table[]"/>
      </do_if>

      <do_if value="not global.$TradeSubscriptionExplorerShips_Table.{$Ship}?">
        <set_value name="global.$TradeSubscriptionExplorerShips_Table.{$Ship}" exact="null"/>
      </do_if>

      <do_if value="$ADD_ORDER_TAG">
        <set_value name="$_OrderTag" exact="if $ORDER_TAG_POSITION == 0 then '#TSE-G ' else ' #TSE-G'"/>
        <substitute_text source="$Ship.knownname" text="$_ResultName">
          <replace string="('\033#FFA95908#' + $_OrderTag + '\033X')" with="''"/>
        </substitute_text>
        <do_if value="$Ship.knownname == $_ResultName">
          <set_object_name object="$Ship" name="(if $ORDER_TAG_POSITION == 0 then ('\033#FFA95908#' + $_OrderTag + '\033X') else '') + $Ship.knownname + (if $ORDER_TAG_POSITION == 1 then ('\033#FFA95908#' + $_OrderTag + '\033X') else '')"/>
        </do_if>
        <remove_value name="$_OrderTag"/>
      </do_if>

      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->

      <label name="RESUME_LBL"/>
      <wait min="500ms" max="1000ms"/>

      <!-- just for the ui -->
      <set_command command="command.scan"/>
      <set_command_action commandaction="commandaction.calculating"/>

      <!-- Return value ~~ $_FoundStation ~ $_FoundStationsSector -->
      <set_value name="$SECTOR" exact="global.$TradeSubscriptionExplorerShips_Table.{$Ship}"/>
      <wait min="250ms" max="1250ms"/>
      <include_interrupt_actions ref="JP_Lib_GetNearestExpiredTradeSubscription_TSE"/>

      <!-- Nothing to do.. idle a bit and try again -->
      <do_if value="@$_FoundStation == null">
        <set_value name="global.$TradeSubscriptionExplorerShips_Table.{$Ship}" exact="null"/>
        <set_value name="$SECTOR" exact="global.$TradeSubscriptionExplorerShips_Table.{$Ship}"/>
        <wait min="250ms" max="1250ms"/>
        <include_interrupt_actions ref="JP_Lib_GetNearestExpiredTradeSubscription_TSE"/>
        <do_if value="@$_FoundStation == null">
          <do_if value="$IDLE">
            <create_order id="'JP_IdleReturnHome_TSE'" object="$Ship">
              <param name="IDLE_TIME" value="$IDLE_TIME"/>
              <param name="IDLE_FOLLOW" value="$IDLE_FOLLOW"/>
              <param name="WHO_TO_FOLLOW" value="$WHO_TO_FOLLOW"/>
              <param name="IDLE_DOCKING" value="$IDLE_DOCKING"/>
              <param name="WHERE_TO_DOCK" value="$WHERE_TO_DOCK"/>
              <param name="IDLE_RANDOM_MOVEMENT" value="$IDLE_RANDOM_MOVEMENT"/>
              <param name="IN_WHICH_SECTOR" value="$IN_WHICH_SECTOR"/>
              <param name="IDLE_MOVE_TO" value="$IDLE_MOVE_TO"/>
              <param name="WHERE_TO_MOVE" value="$WHERE_TO_MOVE"/>
              <param name="DEBUG_FOLDER_NAME" value="@$DebugFolderName"/>
              <param name="DEBUG" value="$DEBUG"/>
            </create_order>
            <wait min="500ms" max="1000ms"/>
          </do_if>
          <resume label="RESUME_LBL"/>
        </do_if>
      </do_if>
      <do_if value="@$_FoundStation != null">
        <set_value name="global.$TradeSubscriptionExplorerShips_Table.{$Ship}" exact="$_FoundStationsSector"/>
      </do_if>

      <!-- Exploring the object.. flying to the object and making it visible -->
      <set_command command="command.explore"/>
      <set_command_action commandaction="commandaction.calculating"/>
      <do_if value="not $_FoundStation.hastradesubscription">
        <create_order id="'JP_ExploreTradeSubscription_TSE'" object="$Ship">
          <param name="STATION" value="$_FoundStation"/>
          <param name="DEBUG_FOLDER_NAME" value="@$DebugFolderName"/>
          <param name="DEBUG" value="$DEBUG"/>
        </create_order>
        <wait min="500ms" max="1000ms"/>
      </do_if>

      <!-- cleanup and resume from top -->
      <remove_value name="$_FoundStationsSector"/>
      <remove_value name="$_FoundStation"/>
      <resume label="RESUME_LBL"/>

      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->

      <label name="FINISH_LBL"/>
      <wait min="500ms" max="1000ms"/>
      <do_if value="$DEBUG gt 0">
        <debug_to_file directory="$DebugFolderName" name="$DebugFileName" text="'[' + player.systemtime.{'%F - %X'} + '] ' + '~~ ' + $DebugScriptName + '.xml ~ Finished ~~'"/>
        <debug_to_file directory="$DebugFolderName" name="$DebugFileName" text="'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~\n'"/>
      </do_if>

      <label name="CLEANUP_LBL"/>
      <wait min="500ms" max="1000ms"/>
      <remove_value name="$DebugFileName"/>
      <remove_value name="$DebugScriptName"/>
      <remove_value name="$DebugFolderName"/>
      <remove_value name="$Quit"/>
      <remove_value name="$Ship"/>

      <label name="END_LBL"/>
      <wait min="500ms" max="1000ms"/>
      <set_order_syncpoint_reached order="this.ship.defaultorder"/>
      <cancel_order order="this.ship.defaultorder"/>

    </actions>
  </attention>

  <on_abort>
    <remove_value name="$_FoundStationsSector"/>
    <remove_value name="$_FoundStation"/>
    <remove_value name="$DebugFileName"/>
    <remove_value name="$DebugScriptName"/>
    <remove_value name="$DebugFolderName"/>
    <remove_value name="$Quit"/>
    <remove_value name="$Ship"/>
  </on_abort>

</aiscript>
