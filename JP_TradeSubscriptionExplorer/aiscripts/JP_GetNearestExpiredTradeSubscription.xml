<?xml version="1.0" encoding="utf-8"?>

<aiscript name="JP_GetNearestStationWithExpiredTradeSubscription" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="aiscripts.xsd">

  <order id ="JP_GetNearestStationWithExpiredTradeSubscription" name="GetNearestStationWithExpiredTradeSubscription JP" category="internal" infinite="false">
    <params>
      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
      <param name="ENEMY_SECTORS" text="EnemySectors" type="bool" default="false"/>
      <param name="NEUTRAL_SECTORS" text="NeutralSectors" type="bool" default="true"/>
      <param name="FRIENDLY_SECTORS" text="FriendlySectors" type="bool" default="true"/>
      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
      <!-- If not specified the script will search the galaxy for stations with expired trade subscriptions.. if not.. it simply searches in SECTOR -->
      <param name="SECTOR" text="Sector" type="object" default="null">
        <input_param name="class" value="[class.sector]"/>
      </param>
      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
      <!-- DEBUG -->
      <param name="DEBUG" text="DebugText" type="number" default="0" advanced="true">
        <input_param name="min" value="0"/>
        <input_param name="max" value="100"/>
        <input_param name="step" value="100"/>
      </param>
      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    </params>
  </order>

  <init>
    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    <set_value name="$DebugDirectory" exact="'JP_TradeSubscriptionExplorer.logs'"/>
    <set_value name="$DebugFileName" exact="this.ship.idcode + '.JP_GetNearestStationWithExpiredTradeSubscription.xml.log'"/>
    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    <set_value name="$Ship" exact="this.ship"/>
    <set_value name="$NearestStation" exact="'NoStationWithExpiredTradeSubscriptionFound'"/>
    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
  </init>

  <attention min="unknown">
    <actions>

      <wait exact="1ms"/>
      <label name="INIT"/>

      <do_if value="$DEBUG gt 0">
        <debug_to_file append="false" directory="$DebugDirectory" name="$DebugFileName" text="'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~'"/>
        <debug_to_file directory="$DebugDirectory" name="$DebugFileName" text="'[' + player.systemtime.{'%F - %X'} + '] ' + '~~ JP_GetNearestStationWithExpiredTradeSubscription.xml ~ Started ~~' + '\n'"/>
      </do_if>

      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->

      <label name="SEARCH_FOR_SECTORS"/>
      <do_if value="$SECTOR != null">
        <create_list name="$_Sectors"/>
        <append_to_list name="$_Sectors" exact="$SECTOR"/>
        <resume label="SEARCH_FOR_EXPIRED_TRADE_SUBSCRIPTIONS"/>
      </do_if>

      <create_list name="$_TempSectors"/>
      <find_sector name="$_TempSectors" space="player.galaxy" multiple="true">
        <match knownto="$Ship.owner"/>
      </find_sector>

      <remove_from_list name="$_TempSectors" list="global.$TradeSubscriptionExplorerSectorBlackList"/>

      <include_interrupt_actions ref="GetBlacklistgroup"/>

      <create_list name="$_Sectors"/>
      <do_for_each name="$_Sector" in="$_TempSectors">
        <do_if value="$Ship.gatedistance.{$_Sector} lt 0">
          <continue/>
        </do_if>
        <do_if value="$_Sector.isblacklisted.{blacklisttype.sectortravel}.{$blacklistgroup}.{$Ship} or $_Sector.isblacklisted.{blacklisttype.objectactivity}.{$blacklistgroup}.{$Ship}">
          <continue/>
        </do_if>
        <do_if value="$_Sector.owner.mayattack.{$Ship} and not $ENEMY_SECTORS">
          <continue/>
        </do_if>
        <do_if value="$_Sector.owner == faction.ownerless and not $NEUTRAL_SECTORS">
          <continue/>
        </do_if>
        <do_if value="$_Sector.owner != faction.ownerless and not $_Sector.owner.mayattack.{$Ship} and not $FRIENDLY_SECTORS">
          <continue/>
        </do_if>
        <append_to_list name="$_Sectors" exact="$_Sector"/>
      </do_for_each>
      <remove_value name="$_TempSectors"/>

      <do_if value="$DEBUG gt 0 and @$_Sectors.count gt 0">
        <debug_to_file directory="$DebugDirectory" name="$DebugFileName" text="'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~'"/>
        <debug_to_file directory="$DebugDirectory" name="$DebugFileName" text="'$_Sectors.count: ' + $_Sectors.count"/>
        <debug_to_file directory="$DebugDirectory" name="$DebugFileName" text="'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~'"/>
        <do_for_each name="$_Sector" in="$_Sectors">
          <debug_to_file directory="$DebugDirectory" name="$DebugFileName" text="' ~ ' + $_Sector.knownname + ' ~~ [' + $_Sector.owner.knownname + ']'"/>
        </do_for_each>
        <debug_to_file directory="$DebugDirectory" name="$DebugFileName" text="'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~\n'"/>
      </do_if>

      <do_if value="$_Sectors.count gt 0">
        <do_if value="$_Sectors.count gt 1">
          <sort_list list="$_Sectors" sortbyvalue="$Ship.gatedistance.{loop.element}"/>
        </do_if>
      </do_if>
      <do_else>
        <resume label="FINISH"/>
      </do_else>

      <label name="SEARCH_FOR_EXPIRED_TRADE_SUBSCRIPTIONS"/>
      <do_for_each name="$_Sector" in="$_Sectors">

        <create_list name="$_Objects"/>

        <find_station name="$_Objects" space="$_Sector" multiple="true" append="true">
          <match mayattack="$Ship" negate="true"/>
          <match_relation_to faction="$Ship.owner" comparison="ge" relation="neutral"/>
          <match tradesknownto="$Ship.owner" negate="true"/>
          <match knownto="$Ship.owner"/>
        </find_station>

        <do_if value="$_Objects.count gt 0">
          <do_if value="$_Objects.count gt 1">
            <sort_list list="$_Objects" sortbyvalue="$Ship.distanceto.{loop.element}"/>
          </do_if>
          <set_value name="$NearestStation" exact="$_Objects.{1}"/>
          <remove_value name="$_Objects"/>
          <break/>
        </do_if>
        <remove_value name="$_Objects"/>

      </do_for_each>

      <label name="FINISH"/>

      <do_if value="$DEBUG gt 0">
        <do_if value="$NearestStation == 'NoStationWithExpiredTradeSubscriptionFound'">
          <debug_to_file directory="$DebugDirectory" name="$DebugFileName" text="'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~'"/>
          <do_if value="$SECTOR == null">
            <debug_to_file directory="$DebugDirectory" name="$DebugFileName" text="' ~ No Station with expired Trade Subscription found.'"/>
          </do_if>
          <do_else>
            <debug_to_file directory="$DebugDirectory" name="$DebugFileName" text="' ~ No Station with expired Trade Subscription found in sector ' + $SECTOR.knownname + '.'"/>
          </do_else>
          <debug_to_file directory="$DebugDirectory" name="$DebugFileName" text="'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~\n'"/>
        </do_if>
        <do_else>
          <debug_to_file directory="$DebugDirectory" name="$DebugFileName" text="'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~'"/>
          <debug_to_file directory="$DebugDirectory" name="$DebugFileName" text="'$NearestStation: ' + $NearestStation.knownname + ' ~~ [' + $NearestStation.owner.knownname + ']'"/>
          <debug_to_file directory="$DebugDirectory" name="$DebugFileName" text="'$NearestStation.sector: ' + $NearestStation.sector.knownname + ' ~~ [' + $NearestStation.sector.owner.knownname + ']'"/>
          <debug_to_file directory="$DebugDirectory" name="$DebugFileName" text="'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~\n'"/>
        </do_else>
      </do_if>

      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->

      <do_if value="$DEBUG gt 0">
        <debug_to_file directory="$DebugDirectory" name="$DebugFileName" text="'[' + player.systemtime.{'%F - %X'} + '] ' + '~~ JP_GetNearestStationWithExpiredTradeSubscription.xml ~ Finished ~~'"/>
        <debug_to_file directory="$DebugDirectory" name="$DebugFileName" text="'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~\n'"/>
      </do_if>

      <label name="CLEANUP"/>
      <remove_value name="$Ship"/>
      <remove_value name="$DebugFileName"/>
      <remove_value name="$DebugDirectory"/>

      <label name="END"/>
      <wait exact="1ms"/>

      <label name="RETURN"/>
      <return>
        <retval name="NEAREST_STATION" value="$NearestStation"/>
      </return>

    </actions>
  </attention>

</aiscript>