<?xml version="1.0" encoding="utf-8"?>

<aiscript name="JP_MoveToSector" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="aiscripts.xsd" version="1">

  <order id="JP_MoveToSector" name="MoveToSector JP" category="internal" infinite="false">
    <params>
      <!-- PARAMS -->
      <param name="TARGED_SECTOR" text="Sector" type="object" default="null"/>
      <!-- DEBUG -->
      <param name="DEBUG" text="DebugText" type="number" default="0.0" advanced="1">
        <input_param name="step" value="0.1"/>
        <input_param name="min" value="0.0"/>
        <input_param name="max" value="1.0"/>
      </param>
    </params>
    <skill min="0"/>
    <requires>
      <match shiptype="shiptype.lasertower" negate="true"/>
    </requires>
  </order>

  <interrupts>
    <handler ref="ScannedHandler"/>
    <handler ref="SectorChangeHandler"/>
    <handler ref="TargetInvalidHandler"/>
    <handler ref="AttackHandler"/>
    <handler ref="MissileLockHandler"/>
    <handler ref="ScannedHandler"/>
    <handler ref="InspectedHandler"/>
    <handler ref="FoundAbandonedHandler"/>
    <handler ref="FoundLockboxHandler"/>
    <handler ref="ResupplyHandler"/>
    <handler ref="JobRemoveRequestHandler"/>
  </interrupts>

  <init>
    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    <set_value name="$DebugDirectory" exact="'JP_MoveToSector.logs'"/>
    <set_value name="$DebugFileName" exact="'JP_MoveToSector' + '.log'"/>
    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    <set_value name="$Ship" exact="this.ship"/>
    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
  </init>

  <attention min="unknown">
    <actions>
      <wait exact="1ms"/>
      <label name="INIT"/>

      <do_if value="$DEBUG gt 0.0">
        <debug_to_file append="false" directory="$DebugDirectory" name="$DebugFileName" text="'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~'"/>
        <debug_to_file directory="$DebugDirectory" name="$DebugFileName" text="'[' + player.systemtime.{'%F - %X'} + '] ' + '~~ Running JP_MoveToSector ~~' + '\n'"/>
      </do_if>

      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->

      <do_if value="@$TARGED_SECTOR == null or $TARGED_SECTOR.class != class.sector">
        <do_if value="$DEBUG gt 0.0">
          <debug_to_file directory="$DebugDirectory" name="$DebugFileName" text="'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~'"/>
          <debug_to_file directory="$DebugDirectory" name="$DebugFileName" text="'$TARGED_SECTOR param was null or not of class sector.'"/>
          <debug_to_file directory="$DebugDirectory" name="$DebugFileName" text="'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~\n'"/>
        </do_if>
        <resume label="END"/>
      </do_if>

      <label name="RESUME"/>

      <do_if value="$Ship.sector != $TARGED_SECTOR">

        <create_list name="$JumpPath"/>
        <get_jump_path start="$Ship.sector" end="$TARGED_SECTOR" component="$JumpPath" multiple="1"/>
        <do_if value="$JumpPath.count gt 0">
          <do_for_each name="$_it" in="$JumpPath">
            <do_if value="$_it.class == class.gate">
              <set_value name="$FoundGate" exact="$_it"/>
              <break/>
            </do_if>
          </do_for_each>
        </do_if>
        <remove_value name="$JumpPath"/>
        <do_if value="$DEBUG gt 0.0">
          <debug_to_file directory="$DebugDirectory" name="$DebugFileName" text="'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~'"/>
          <debug_to_file directory="$DebugDirectory" name="$DebugFileName" text="'$FoundGate: ' + $FoundGate.exit.sector.knownname + ' ~ ' + $FoundGate.class"/>
          <debug_to_file directory="$DebugDirectory" name="$DebugFileName" text="'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~\n'"/>
        </do_if>

        <run_script name="'JP_MoveThroughGate'">
          <param name="GATE" value="$FoundGate"/>
          <param name="DEBUG" value="$DEBUG"/>
        </run_script>

        <do_if value="$Ship.sector != $TARGED_SECTOR">
          <do_if value="$DEBUG gt 0.0">
            <debug_to_file directory="$DebugDirectory" name="$DebugFileName" text="'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~'"/>
            <debug_to_file directory="$DebugDirectory" name="$DebugFileName" text="'$Ship.sector is not $TARGED_SECTOR resume to move to it.'"/>
            <debug_to_file directory="$DebugDirectory" name="$DebugFileName" text="'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~\n'"/>
          </do_if>
          <wait exact="1s"/>
          <resume label="RESUME"/>
        </do_if>

      </do_if>

      <label name="END"/>

      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->

      <do_if value="$DEBUG gt 0.0">
        <debug_to_file directory="$DebugDirectory" name="$DebugFileName" text="'[' + player.systemtime.{'%F - %X'} + '] ' + '~~ Completed JP_MoveToSector ~~'"/>
        <debug_to_file directory="$DebugDirectory" name="$DebugFileName" text="'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~\n'"/>
      </do_if>

      <label name="CLEANUP"/>
      <remove_value name="$Ship"/>
      <remove_value name="$DebugFileName"/>
      <remove_value name="$DebugDirectory"/>

      <label name="FINISH"/>
      <wait exact="1ms"/>

    </actions>
  </attention>

  <on_abort>
  </on_abort>

</aiscript>