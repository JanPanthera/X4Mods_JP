<?xml version="1.0" encoding="utf-8"?>

<aiscript name="JP_Go_Defend" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="aiscripts.xsd" version="1">

  <order id="JP_Go_Defend" name="Go_Defend JP" category="internal" infinite="true">
    <params>
      <!-- PARAMS -->
      <!-- DEBUG -->
      <param name="DEBUG" text="DebugText" type="number" default="0" advanced="1">
        <input_param name="step" value="50"/>
        <input_param name="min" value="0"/>
        <input_param name="max" value="100"/>
      </param>
    </params>
    <skill min="0"/>
    <requires>
      <match shiptype="shiptype.lasertower" negate="true"/>
    </requires>
  </order>

  <interrupts>
    <handler ref="ScannedHandler"/>
    <handler ref="SectorChangeHandler"/>
    <handler ref="TargetInvalidHandler"/>
    <handler ref="AttackHandler"/>
    <handler ref="MissileLockHandler"/>
    <handler ref="ScannedHandler"/>
    <handler ref="InspectedHandler"/>
    <handler ref="FoundAbandonedHandler"/>
    <handler ref="FoundLockboxHandler"/>
    <handler ref="ResupplyHandler"/>
    <handler ref="JobRemoveRequestHandler"/>
  </interrupts>

  <init>
    <set_value name="$DebugDirectory" exact="'JP_Go_Defend.logs'"/>
    <set_value name="$DebugFileName" exact="'JP_Go_Defend' + '.log'"/>
    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    <set_value name="$Ship" exact="this.ship"/>
    <set_value name="$FleetCommander" exact="this.ship.fleet.commander"/>
    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
  </init>

  <attention min="unknown">
    <actions>

      <wait exact="1ms"/>
      <label name="INIT"/>

      <do_if value="$DEBUG gt 0.0">
        <debug_to_file append="false" directory="$DebugDirectory" name="$DebugFileName" text="'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~'"/>
        <debug_to_file directory="$DebugDirectory" name="$DebugFileName" text="'[' + player.systemtime.{'%F - %X'} + '] ' + '~~ Running JP_Go_Defend ~~' + '\n'"/>
      </do_if>

      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->

      <label name="RESUME"/>

      <set_value name="$HasAttackOrder" exact="false"/>
      <do_for_each name="$Order" in="$Ship.orders">
        <do_if value="$Order.id == 'Attack'">
          <set_value name="$HasAttackOrder" exact="true"/>
        </do_if>
      </do_for_each>

      <do_if value="not $HasAttackOrder">

        <run_script name="'JP_GetNearestEnemy'">
          <param name="RANGE" value="$FleetCommander.maxradarrange"/>
          <param name="CLASSES" value="[class.ship_s, class.ship_m]"/>
          <param name="CENTER_POSITION" value="$FleetCommander.position"/>
          <save_retval name="NEAREST_ENEMY" variable="$NearestEnemyFighter"/>
        </run_script>

        <run_script name="'JP_GetNearestEnemy'">
          <param name="RANGE" value="$FleetCommander.maxradarrange"/>
          <param name="CLASSES" value="[class.ship_l, class.ship_xl]"/>
          <param name="CENTER_POSITION" value="$FleetCommander.position"/>
          <save_retval name="NEAREST_ENEMY" variable="$NearestEnemyDestroyer"/>
        </run_script>

        <do_if value="$NearestEnemyFighter == null and ($Ship.class == class.ship_s or $Ship.class == class.ship_m) or 
                      $NearestEnemyDestroyer == null and ($Ship.class == class.ship_l or $Ship.class == class.ship_xl)">
          <cancel_all_orders object="$Ship"/>
          <create_order object="$Ship" id="'JP_Go_WaitForOrders'" immediate="true" default="true">
            <param name="OBJECT_TO_DOCK" value="$FleetCommander"/>
          </create_order>
        </do_if>
        
        <do_if value="$NearestEnemyFighter != null and ($Ship.class == class.ship_s or $Ship.class == class.ship_m)">
          <cancel_all_orders object="$Ship"/>
          <create_order object="$Ship" id="'Attack'" immediate="true">
            <param name="primarytarget" value="$NearestEnemyFighter"/>
            <param name="pursuetargets" value="false"/>
          </create_order>
        </do_if>

        <do_if value="$NearestEnemyDestroyer != null and ($Ship.class == class.ship_l or $Ship.class == class.ship_xl)">
          <cancel_all_orders object="$Ship"/>
          <create_order object="$Ship" id="'Attack'" immediate="true">
            <param name="primarytarget" value="$NearestEnemyDestroyer"/>
            <param name="pursuetargets" value="false"/>
          </create_order>
        </do_if>

      </do_if>

      <wait exact="1s"/>
      <resume label="RESUME"/>

      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->

      <do_if value="$DEBUG gt 0.0">
        <debug_to_file directory="$DebugDirectory" name="$DebugFileName" text="'[' + player.systemtime.{'%F - %X'} + '] ' + '~~ Completed JP_Go_Defend ~~'"/>
        <debug_to_file directory="$DebugDirectory" name="$DebugFileName" text="'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~\n'"/>
      </do_if>

      <label name="CLEANUP"/>
      <remove_value name="$FleetCommander"/>
      <remove_value name="$DebugFileName"/>
      <remove_value name="$DebugDirectory"/>

      <label name="FINISH"/>
      <set_order_syncpoint_reached order="this.ship.order"/>
      <cancel_order order="this.ship.order" />
      <wait exact="1ms"/>

    </actions>
  </attention>

  <on_abort>
  </on_abort>

</aiscript>