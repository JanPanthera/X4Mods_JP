<?xml version="1.0" encoding="utf-8"?>

<aiscript name="JP_AnotherExplorerV2S" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="aiscripts.xsd" version="1">

  <order id="JP_AnotherExplorerV2S" name="_{8888888, 497}AnotherExplorerV2 - {8888888, 499}{8888888, 498}{20001, 201}{8888888, 499}" category="navigation" infinite="true">
    <params>
      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
      <param name="PLACE_HOLDER_000" text="----------------------------------" type="object" default="null">
        <input_param name="class" value="[]"/>
      </param>
      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
      <param name="SECTOR" text="{20001, 201}" comment="Sector" type="object" default="this.ship.sector">
        <input_param name="class" value="[class.sector]"/>
      </param>
      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
      <param name="PLACE_HOLDER_001" text="----------------------------------" type="object" default="null">
        <input_param name="class" value="[]"/>
      </param>
      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
      <param name="JUMP_GATES" text="{8888888, 410}" comment="Jump Gates?" type="bool" default="if global.$AnotherExplorerV2S_Settings? then global.$AnotherExplorerV2S_Settings.{1} else true"/>
      <param name="STATIONS" text="{8888888, 411}" comment="Stations?" type="bool" default="if global.$AnotherExplorerV2S_Settings? then global.$AnotherExplorerV2S_Settings.{2} else true"/>
      <param name="ENEMY_STATIONS" text="- {8888888, 412}" comment="Enemy Stations?" type="bool" default="if global.$AnotherExplorerV2S_Settings? then global.$AnotherExplorerV2S_Settings.{3} else false"/>
      <param name="FRIENDLY_STATIONS" text="- {8888888, 413}" comment="Friendly Stations?" type="bool" default="if global.$AnotherExplorerV2S_Settings? then global.$AnotherExplorerV2S_Settings.{4} else true"/>
      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
      <param name="PLACE_HOLDER_002" text="----------------------------------" type="object" default="null">
        <input_param name="class" value="[]"/>
      </param>
      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
      <param name="IDLE" text="{8888888, 480}" comment="Idle actions??" type="bool" default="if global.$AnotherExplorerV2S_Settings? then global.$AnotherExplorerV2S_Settings.{5} else true"/>
      <param name="IDLE_TIME" text="{8888888, 481}" comment="Idle Time" type="time" default="if global.$AnotherExplorerV2S_Settings? then global.$AnotherExplorerV2S_Settings.{6} else 600s">
        <input_param name="min" value="60s"/>
        <input_param name="max" value="3600s"/>
        <input_param name="step" value="10s"/>
      </param>
      <param name="IDLE_FOLLOW" text="{8888888, 482}" comment="Idle: Follow?" type="bool" default="if global.$AnotherExplorerV2S_Settings? then global.$AnotherExplorerV2S_Settings.{7} else false"/>
      <param name="WHO_TO_FOLLOW" text="- {8888888, 483}" comment="Who to follow?" type="object" default="if global.$AnotherExplorerV2S_Settings? then global.$AnotherExplorerV2S_Settings.{8} else null">
        <input_param name="class" value="[class.ship]"/>
        <input_param name="owner" value="this.ship.owner"/>
      </param>
      <param name="IDLE_DOCKING" text="{8888888, 484}" comment="Idle: Docking?" type="bool" default="if global.$AnotherExplorerV2S_Settings? then global.$AnotherExplorerV2S_Settings.{9} else false"/>
      <param name="WHERE_TO_DOCK" text="- {8888888, 485}" comment="Where to dock?" type="object" default="if global.$AnotherExplorerV2S_Settings? then global.$AnotherExplorerV2S_Settings.{10} else null">
        <input_param name="class" value="if this.ship.isclass.[class.ship_s, class.ship_xs] then [class.station, class.ship_m, class.ship_l, class.ship_xl] else [class.station, class.ship_l, class.ship_xl]"/>
      </param>
      <param name="IDLE_RANDOM_MOVEMENT" text="{8888888, 486}" comment="Idle: Movement?" type="bool" default="if global.$AnotherExplorerV2S_Settings? then global.$AnotherExplorerV2S_Settings.{11} else false"/>
      <param name="IN_WHICH_SECTOR" text="- {8888888, 487}" comment="In which sector?" type="position" default="if global.$AnotherExplorerV2S_Settings? then global.$AnotherExplorerV2S_Settings.{12} else [this.ship.sector, this.ship.position]">
        <input_param name="class" value="class.sector"/>
      </param>
      <param name="IDLE_MOVE_TO" text="{8888888, 488}" comment="Idle: Move to?" type="bool" default="if global.$AnotherExplorerV2S_Settings? then global.$AnotherExplorerV2S_Settings.{13} else false"/>
      <param name="WHERE_TO_MOVE" text="- {8888888, 489}" comment="Where to move?" type="position" default="if global.$AnotherExplorerV2S_Settings? then global.$AnotherExplorerV2S_Settings.{14} else [this.ship.sector, this.ship.position]">
        <input_param name="class" value="class.sector"/>
      </param>
      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
      <param name="PLACE_HOLDER_997" text="----------------------------------" type="object" default="null">
        <input_param name="class" value="[]"/>
      </param>
      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
      <param name="ADD_ORDER_TAG" text="{8888888, 491}" comment="Add order tag?" type="bool" default="if global.$AnotherExplorerV2S_Settings? then global.$AnotherExplorerV2S_Settings.{15} else true"/>
      <param name="ORDER_TAG_POSITION" text="{8888888, 492}" comment="Order tag position" type="number" default="if global.$AnotherExplorerV2S_Settings? then global.$AnotherExplorerV2S_Settings.{16} else 1">
        <input_param name="min" value="0"/>
        <input_param name="max" value="1"/>
        <input_param name="step" value="1"/>
      </param>
      <param name="SAVE_ORDER_SETTINGS" text="{8888888, 493}" comment="Save Order Settings?" type="bool" default="false"/>
      <param name="RESET_ORDER_SETTINGS" text="{8888888, 494}" comment="Reset Order Settings?" type="bool" default="false"/>
      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
      <param name="PLACE_HOLDER_998" text="----------------------------------" type="object" default="null">
        <input_param name="class" value="[]"/>
      </param>
      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
      <param name="DEBUG" text="Debug" type="number" default="if global.$AnotherExplorerV2S_Settings? then global.$AnotherExplorerV2S_Settings.{17} else 0" advanced="true">
        <input_param name="step" value="100"/>
        <input_param name="min" value="0"/>
        <input_param name="max" value="100"/>
      </param>
      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
      <param name="PLACE_HOLDER_999" text="----------------------------------" type="object" default="null" advanced="true">
        <input_param name="class" value="[]"/>
      </param>
      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    </params>
    <skill min="0"/>
    <requires>
      <match shiptype="shiptype.lasertower" negate="true"/>
    </requires>
  </order>

  <interrupts>
    <handler ref="SectorChangeHandler"/>
    <handler ref="TargetInvalidHandler"/>
    <handler ref="AttackHandler"/>
    <handler ref="MissileLockHandler"/>
    <handler ref="ScannedHandler"/>
    <handler ref="InspectedHandler"/>
    <handler ref="FoundAbandonedHandler"/>
    <handler ref="FoundLockboxHandler"/>
    <handler ref="ResupplyHandler"/>
    <handler ref="JobRemoveRequestHandler"/>
  </interrupts>

  <init>
    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    <set_value name="$Ship" exact="this.ship"/>
    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    <do_if value="$DEBUG">
      <set_value name="$DebugFolderName" exact="'JP_AnotherExplorerV2.logs'"/>
      <set_value name="$DebugScriptName" exact="'JP_AnotherExplorerV2S'"/>
      <set_value name="$DebugFileName" exact="$Ship.idcode + '.' + $DebugScriptName + '.xml.log'"/>
      <debug_to_file directory="$DebugFolderName" name="$DebugFileName" text="'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~'" append="false"/>
      <debug_to_file directory="$DebugFolderName" name="$DebugFileName" text="'[' + player.systemtime.{'%F - %X'} + '] ' + '~~ ' + $DebugScriptName + '.xml ~ Started ~~' + '\n'"/>
    </do_if>
    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    <do_if value="$ADD_ORDER_TAG">
      <set_value name="$_OrderTag" exact="if $ORDER_TAG_POSITION == 0 then '#AEV2-S ' else ' #AEV2-S'"/>
      <substitute_text source="$Ship.knownname" text="$_ResultName">
        <replace string="('\033#FFA95908#' + $_OrderTag + '\033X')" with="''"/>
      </substitute_text>
      <do_if value="$Ship.knownname == $_ResultName">
        <set_object_name object="$Ship" name="(if $ORDER_TAG_POSITION == 0 then ('\033#FFA95908#' + $_OrderTag + '\033X') else '') + $Ship.knownname + (if $ORDER_TAG_POSITION == 1 then ('\033#FFA95908#' + $_OrderTag + '\033X') else '')"/>
      </do_if>
      <remove_value name="$_OrderTag"/>
    </do_if>
    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    <do_if value="true">
      <do_if value="not global.$AnotherExplorerV2SectorBlackList?">
        <create_list name="global.$AnotherExplorerV2SectorBlackList"/>
      </do_if>
      <do_if value="not global.$AnotherExplorerV2Ships?">
        <create_list name="global.$AnotherExplorerV2Ships"/>
      </do_if>
      <append_to_list name="global.$AnotherExplorerV2Ships" exact="[$Ship, null]"/>
    </do_if>
    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    <do_if value="$SAVE_ORDER_SETTINGS">
      <create_list name="$_SettingsList"/>
      <append_list_elements name="$_SettingsList" other="[
                            $JUMP_GATES, $STATIONS, 
                            $ENEMY_STATIONS, $FRIENDLY_STATIONS,
                            $IDLE, $IDLE_TIME, $IDLE_FOLLOW, $WHO_TO_FOLLOW, $IDLE_DOCKING, $WHERE_TO_DOCK,
                            $IDLE_RANDOM_MOVEMENT, $IN_WHICH_SECTOR, $IDLE_MOVE_TO, $WHERE_TO_MOVE,
                            $ADD_ORDER_TAG, $ORDER_TAG_POSITION, $DEBUG]"/>
      <do_if value="not global.$AnotherExplorerV2S_Settings?">
        <create_list name="global.$AnotherExplorerV2S_Settings"/>
        <append_list_elements name="global.$AnotherExplorerV2S_Settings" other="$_SettingsList"/>
      </do_if>
      <do_else>
        <do_for_each name="$_Setting" in="global.$AnotherExplorerV2S_Settings" counter="$_it">
          <do_if value="$_Setting != $_SettingsList.{$_it}">
            <set_value name="global.$AnotherExplorerV2S_Settings.{$_it}" exact="$_SettingsList.{$_it}"/>
          </do_if>
        </do_for_each>
      </do_else>
      <remove_value name="$_SettingsList"/>
      <show_help duration="5s" allowclose="true" log="true" custom="'JP_AnotherExplorerV2S' + ' ~\n' + $Ship.knownname + ' [' + $Ship.idcode + ']\n\n' + '{8888888, 495}'"/>
      <set_value name="$Quit" exact="true"/>
    </do_if>
    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    <do_if value="$RESET_ORDER_SETTINGS">
      <do_if value="global.$AnotherExplorerV2S_Settings?">
        <remove_value name="global.$AnotherExplorerV2S_Settings"/>
      </do_if>
      <show_help duration="5s" allowclose="true" log="true" custom="'JP_AnotherExplorerV2S' + ' ~\n' + $Ship.knownname + ' [' + $Ship.idcode + ']\n\n' + '{8888888, 496}'"/>
      <set_value name="$Quit" exact="true"/>
    </do_if>
    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
  </init>

  <attention min="unknown">
    <actions>

      <do_if value="$Quit?">
        <resume label="FINISH_LBL"/>
      </do_if>

      <label name="INIT_LBL"/>
      <wait min="500ms" max="1000ms"/>

      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->

      <label name="RESUME_LBL"/>
      <wait min="500ms" max="1000ms"/>

      <!-- just for the ui -->
      <set_command command="command.scan"/>
      <set_command_action commandaction="commandaction.calculating"/>

      <!-- Return value ~~ $_UnknownObjects -->
      <do_if value="@this.$CurrentSector == null">
        <include_interrupt_actions ref="JP_Lib_GetUnknownObjectsInSector_AEV2"/>
        <!-- Nothing found go idle -->
        <do_if value="@$_UnknownObjects == null">
          <remove_value name="$_UnknownObjects"/>
          <remove_value name="$_UnknownObjectsSector"/>
          <!-- Nothing to do.. idle a bit and try again -->
          <do_if value="$IDLE">
            <create_order id="'JP_IdleReturnHome_AEV2'" object="$Ship">
              <param name="IDLE_TIME" value="$IDLE_TIME"/>
              <param name="IDLE_FOLLOW" value="$IDLE_FOLLOW"/>
              <param name="WHO_TO_FOLLOW" value="$WHO_TO_FOLLOW"/>
              <param name="IDLE_DOCKING" value="$IDLE_DOCKING"/>
              <param name="WHERE_TO_DOCK" value="$WHERE_TO_DOCK"/>
              <param name="IDLE_RANDOM_MOVEMENT" value="$IDLE_RANDOM_MOVEMENT"/>
              <param name="IN_WHICH_SECTOR" value="$IN_WHICH_SECTOR"/>
              <param name="IDLE_MOVE_TO" value="$IDLE_MOVE_TO"/>
              <param name="WHERE_TO_MOVE" value="$WHERE_TO_MOVE"/>
              <param name="DEBUG_FOLDER_NAME" value="@$DebugFolderName"/>
              <param name="DEBUG" value="$DEBUG"/>
            </create_order>
            <wait min="500ms" max="1000ms"/>
          </do_if>
          <resume label="RESUME_LBL"/>
        </do_if>
        <set_value name="this.$CurrentSector" exact="$SECTOR"/>
        <set_value name="this.$UnknownObjects" exact="$_UnknownObjects"/>
        <append_to_list name="global.$AnotherExplorerV2SectorBlackList" exact="$SECTOR"/>
        <do_for_each name="$_AnotherExplorerV2Ship" in="global.$AnotherExplorerV2Ships">
          <do_if value="$_AnotherExplorerV2Ship.{1} == $Ship">
            <set_value name="$_AnotherExplorerV2Ship.{2}" exact="$SECTOR"/>
          </do_if>
        </do_for_each>
        <remove_value name="$_UnknownObjects"/>
        <remove_value name="$_UnknownObjectsSector"/>
      </do_if>

      <!-- Exploring the objects.. flying to them and making them visible -->
      <set_command command="command.explore"/>
      <set_command_action commandaction="commandaction.calculating"/>
      <sort_list list="this.$UnknownObjects" sortbyvalue="$Ship.distanceto.{loop.element}" sortdescending="true"/>
      <do_while value="this.$UnknownObjects.count gt 0">
        <do_if value="this.$UnknownObjects.last.isknown">
          <remove_from_list name="this.$UnknownObjects" exact="this.$UnknownObjects.last"/>
          <continue/>
        </do_if>
        <create_order id="'JP_ExploreObject_AEV2'" object="$Ship">
          <param name="OBJECT" value="this.$UnknownObjects.last"/>
          <param name="DEBUG_FOLDER_NAME" value="@$DebugFolderName"/>
          <param name="DEBUG" value="$DEBUG"/>
        </create_order>
        <wait min="500ms" max="1000ms"/>
      </do_while>

      <!-- cleanup and resume from top -->
      <do_if value="global.$AnotherExplorerV2SectorBlackList?">
        <remove_from_list name="global.$AnotherExplorerV2SectorBlackList" exact="this.$CurrentSector"/>
      </do_if>
      <remove_value name="this.$UnknownObjects"/>
      <remove_value name="this.$CurrentSector"/>
      <resume label="RESUME_LBL"/>

      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->

      <label name="FINISH_LBL"/>
      <wait min="500ms" max="1000ms"/>
      <do_if value="$DEBUG gt 0">
        <debug_to_file directory="$DebugFolderName" name="$DebugFileName" text="'[' + player.systemtime.{'%F - %X'} + '] ' + '~~ ' + $DebugScriptName + '.xml ~ Finished ~~'"/>
        <debug_to_file directory="$DebugFolderName" name="$DebugFileName" text="'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~\n'"/>
      </do_if>

      <label name="CLEANUP_LBL"/>
      <wait min="500ms" max="1000ms"/>
      <remove_value name="$DebugFileName"/>
      <remove_value name="$DebugScriptName"/>
      <remove_value name="$DebugFolderName"/>
      <remove_value name="$Quit"/>
      <remove_value name="$Ship"/>

      <label name="END_LBL"/>
      <wait min="500ms" max="1000ms"/>
      <set_order_syncpoint_reached order="this.ship.defaultorder"/>
      <cancel_order order="this.ship.defaultorder"/>

    </actions>
  </attention>

  <on_abort>
    <do_if value="$Ship.orders.count le 0">
      <do_if value="global.$AnotherExplorerV2SectorBlackList?">
        <remove_from_list name="global.$AnotherExplorerV2SectorBlackList" exact="this.$CurrentSector"/>
      </do_if>
    </do_if>
    <remove_value name="this.$UnknownObjects"/>
    <remove_value name="this.$CurrentSector"/>
    <remove_value name="$DebugFileName"/>
    <remove_value name="$DebugScriptName"/>
    <remove_value name="$DebugFolderName"/>
    <remove_value name="$Quit"/>
    <remove_value name="$Ship"/>
  </on_abort>

</aiscript>