<?xml version="1.0" encoding="utf-8"?>

<aiscript name="JP_IdleReturnHome_CP" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="aiscripts.xsd">

  <order id="JP_IdleReturnHome_CP" name="_IdleReturnHome_CP" category="internal" infinite="false">
    <params>
      <param name="IDLE_TIME" type="internal" default="600s"/>
      <param name="IDLE_FOLLOW" type="internal" default="false"/>
      <param name="WHO_TO_FOLLOW" type="internal" default="null"/>
      <param name="IDLE_DOCKING" type="internal" default="false"/>
      <param name="WHERE_TO_DOCK" type="internal" default="null"/>
      <param name="IDLE_RANDOM_MOVEMENT" type="internal" default="false"/>
      <param name="IN_WHICH_SECTOR" type="internal" default="[this.ship.sector, this.ship.position]"/>
      <param name="IDLE_MOVE_TO" type="internal" default="false"/>
      <param name="WHERE_TO_MOVE" type="internal" default="[this.ship.sector, this.ship.position]"/>
    </params>
    <location object="$LOCATION_OBJECT_USED_IN_UI" condition="$LOCATION_OBJECT_USED_IN_UI? and @$LOCATION_OBJECT_USED_IN_UI != null and @$LOCATION_OBJECT_USED_IN_UI.isclass.{class.component}"/>
  </order>

  <interrupts>
    <handler ref="SectorChangeHandler"/>
    <handler ref="TargetInvalidHandler"/>
    <handler ref="AttackHandler"/>
    <handler ref="MissileLockHandler"/>
    <handler ref="ScannedHandler"/>
    <handler ref="InspectedHandler"/>
    <handler ref="FoundAbandonedHandler"/>
    <handler ref="FoundLockboxHandler"/>
    <handler ref="ResupplyHandler"/>
    <handler ref="JobRemoveRequestHandler"/>
  </interrupts>

  <init>
    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    <set_value name="$Ship" exact="this.ship"/>
    <set_value name="$ShipsCurrentName" exact="$Ship.knownname"/>
    <set_value name="$LOCATION_OBJECT_USED_IN_UI" exact="null"/>
    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    <set_value chance="this.$DEBUG" name="$DebugScriptName" exact="'JP_IdleReturnHome_CP'"/>
    <set_value chance="this.$DEBUG" name="$DebugFileName" exact="$Ship.idcode + '.' + $DebugScriptName + '.xml.log'"/>
    <debug_to_file chance="this.$DEBUG" directory="this.$DebugFolderName" name="$DebugFileName" text="'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~'" append="false"/>
    <debug_to_file chance="this.$DEBUG" directory="this.$DebugFolderName" name="$DebugFileName" text="'[' + player.systemtime.{'%F - %X'} + '] ' + '~~ ' + $DebugScriptName + '.xml ~ Started ~~' + '\n'"/>
    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
  </init>

  <attention min="unknown">
    <actions>

      <label name="INIT_LBL"/>
      <wait min="1s" max="3s"/>

      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->

      <label name="RESUME_LBL"/>

      <!-- just for the ui -->
      <set_command command="command.wait"/>
      <set_command_action commandaction="commandaction.standingby"/>

      <do_if value="$IDLE_FOLLOW">
        <resume label="IDLE_FOLLOW_LBL"/>
      </do_if>
      <do_elseif value="$IDLE_DOCKING">
        <resume label="IDLE_DOCKING_LBL"/>
      </do_elseif>
      <do_elseif value="$IDLE_RANDOM_MOVEMENT">
        <resume label="IDLE_RANDOM_MOVEMENT_LBL"/>
      </do_elseif>
      <do_elseif value="$IDLE_MOVE_TO">
        <resume label="IDLE_MOVE_TO_LBL"/>
      </do_elseif>
      <do_else>
        <resume label="IDLE_RANDOM_MOVEMENT_LBL"/>
      </do_else>

      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->

      <label name="IDLE_FOLLOW_LBL"/>
      <do_if value="@$WHO_TO_FOLLOW == null">
        <do_if value="@$IN_WHICH_SECTOR == null">
          <set_value name="$IN_WHICH_SECTOR" exact="$Ship.position"/>
        </do_if>
        <resume label="IDLE_RANDOM_MOVEMENT_LBL"/>
      </do_if>
      <set_value name="$CurrentSector" exact="$WHO_TO_FOLLOW.sector"/>
      <set_value name="$LOCATION_OBJECT_USED_IN_UI" exact="$WHO_TO_FOLLOW"/>
      <do_if value="$Ship.sector != $CurrentSector">
        <resume label="MOVE_TO_SECTOR_LBL"/>
      </do_if>
      <set_command command="command.follow" param="$WHO_TO_FOLLOW"/>
      <set_object_name object="$Ship" name="$ShipsCurrentName + '{8888888, 870}'" comment="$ShipsCurrentName + '\033#FFCEFBA1# ~ Idle - following..\033X'"/>
      <set_value name="$_InitialTime" exact="player.age"/>
      <get_safe_pos result="$SafePosition" zone="$CurrentSector" object="$WHO_TO_FOLLOW" directionobject="$Ship" radius="($WHO_TO_FOLLOW.size + $Ship.size) / 2"/>
      <label name="MOVE_FOLLOW_LBL"/>
      <do_if value="$Ship.distanceto.{$WHO_TO_FOLLOW} gt ((($WHO_TO_FOLLOW.size / 2) + ($Ship.size / 2) + 100m) + 4km)">
        <get_safe_pos result="$SafePosition" zone="$CurrentSector" object="$WHO_TO_FOLLOW" directionobject="$Ship" radius="($WHO_TO_FOLLOW.size + $Ship.size) / 2"/>
      </do_if>
      <do_if value="$Ship.distanceto.{$WHO_TO_FOLLOW} gt (($WHO_TO_FOLLOW.size / 2) + ($Ship.size / 2) + 100m)">
        <move_to object="$Ship" destination="$CurrentSector" forceposition="true" travel="true">
          <position value="$SafePosition"/>
          <interrupt_after_time time="2s"/>
        </move_to>
      </do_if>
      <do_else>
        <wait exact="2s"/>
      </do_else>
      <do_if value="((player.age - $_InitialTime)s lt $IDLE_TIME)">
        <wait exact="1s"/>
        <resume label="MOVE_FOLLOW_LBL"/>
      </do_if>
      <set_object_name object="$Ship" name="$ShipsCurrentName"/>
      <remove_value name="$_InitialTime"/>
      <wait min="1s" max="3s"/>
      <resume label="FINISH_LBL"/>

      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->

      <label name="IDLE_DOCKING_LBL"/>
      <do_if value="@$WHERE_TO_DOCK == null">
        <resume label="IDLE_RANDOM_MOVEMENT_LBL"/>
      </do_if>
      <find_dockingbay name="$_FoundDockingBay" object="$WHERE_TO_DOCK">
        <match_dock size="$Ship.docksize" free="true"/>
      </find_dockingbay>
      <do_if value="@$_FoundDockingBay == null">
        <do_if value="$WHERE_TO_DOCK.isclass.{class.ship}">
          <set_value name="$WHO_TO_FOLLOW" exact="$WHERE_TO_DOCK"/>
          <resume label="IDLE_FOLLOW_LBL"/>
        </do_if>
        <do_if value="$WHERE_TO_DOCK.isclass.{class.station}">
          <set_value name="$WHERE_TO_MOVE" exact="$WHERE_TO_DOCK"/>
          <resume label="IDLE_MOVE_TO_LBL"/>
        </do_if>
      </do_if>
      <set_value name="$CurrentSector" exact="$WHERE_TO_DOCK.sector"/>
      <set_value name="$LOCATION_OBJECT_USED_IN_UI" exact="$WHERE_TO_DOCK"/>
      <do_if value="$Ship.sector != $CurrentSector">
        <resume label="MOVE_TO_SECTOR_LBL"/>
      </do_if>
      <set_command command="command.dockat" param="$WHERE_TO_DOCK"/>
      <set_object_name object="$Ship" name="$ShipsCurrentName + '{8888888, 871}'" comment="$ShipsCurrentName + '\033#FFCEFBA1# ~ Idle - docking at %1\033X'"/>
      <create_order object="$Ship" id="'DockAndWait'" immediate="true">
        <param name="destination" value="$WHERE_TO_DOCK"/>
        <param name="timeout" value="$IDLE_TIME"/>
        <param name="dockfollowers" value="true"/>
      </create_order>
      <set_object_name object="$Ship" name="$ShipsCurrentName"/>
      <remove_value name="$_FoundDockingBay"/>
      <wait min="1s" max="3s"/>
      <resume label="FINISH_LBL"/>

      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->

      <label name="IDLE_RANDOM_MOVEMENT_LBL"/>
      <do_if value="@$IN_WHICH_SECTOR == null">
        <set_value name="$IN_WHICH_SECTOR" exact="$Ship.position"/>
      </do_if>
      <set_value name="$CurrentSector" exact="$IN_WHICH_SECTOR.{1}"/>
      <set_value name="$LOCATION_OBJECT_USED_IN_UI" exact="$IN_WHICH_SECTOR"/>
      <do_if value="$Ship.sector != $CurrentSector">
        <resume label="MOVE_TO_SECTOR_LBL"/>
      </do_if>
      <set_command command="command.wait"/>
      <set_command_action commandaction="commandaction.calculating"/>
      <set_object_name object="$Ship" name="$ShipsCurrentName + '{8888888, 872}'" comment="$ShipsCurrentName + '\033#FFCEFBA1# ~ Idle - moving randomly..\033X'"/>
      <run_script name="'move.random'">
        <param name="TimeOut" value="$IDLE_TIME"/>
        <param name="Anchor" value="$CurrentSector"/>
        <param name="Offset" value="$IN_WHICH_SECTOR.{2}"/>
        <param name="MaxDistance" value="10km"/>
      </run_script>
      <set_object_name object="$Ship" name="$ShipName"/>
      <wait min="1s" max="3s"/>
      <resume label="FINISH_LBL"/>

      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->

      <!-- TODO -->
      <label name="IDLE_MOVE_TO_LBL"/>
      <do_if value="@$WHERE_TO_MOVE == null">
        <set_value name="$IN_WHICH_SECTOR" exact="$Ship.position"/>
        <resume label="IDLE_RANDOM_MOVEMENT_LBL"/>
      </do_if>
      <do_if value="@$WHERE_TO_MOVE.isclass.{class.ship} or @$WHERE_TO_MOVE.isclass.{class.station}">
        <set_value name="$CurrentSector" exact="$WHERE_TO_MOVE.sector"/>
        <set_value name="$LOCATION_OBJECT_USED_IN_UI" exact="$WHERE_TO_MOVE"/>
      </do_if>
      <do_else>
        <set_value name="$CurrentSector" exact="$WHERE_TO_MOVE.{1}"/>
        <set_value name="$LOCATION_OBJECT_USED_IN_UI" exact="$WHERE_TO_MOVE.{2}"/>
      </do_else>
      <do_if value="$Ship.sector != $CurrentSector">
        <resume label="MOVE_TO_SECTOR_LBL"/>
      </do_if>
      <set_command command="command.move" param="$WHERE_TO_MOVE"/>
      <set_object_name object="$Ship" name="$ShipsCurrentName + '{8888888, 873}'" comment="$ShipsCurrentName + '\033#FFCEFBA1# ~ Idle - moving to waiting position..\033X'"/>
      <do_if value="@$WHERE_TO_MOVE.isclass.{class.ship} or @$WHERE_TO_MOVE.isclass.{class.station}">
        <move_to object="$Ship" destination="$CurrentSector" finishonapproach="false" forceposition="false" travel="true">
        </move_to>
      </do_if>
      <do_else>
        <move_to object="$Ship" destination="$CurrentSector" finishonapproach="false" forceposition="true" travel="true">
          <position value="$WHERE_TO_MOVE.{2}"/>
        </move_to>
      </do_else>
      <stop_moving object="$Ship"/>
      <set_object_name object="$Ship" name="$ShipName + '\033#FFCEFBA1# ~ Idle - waiting some time\033X'"/>
      <wait exact="$IDLE_TIME"/>
      <set_object_name object="$Ship" name="$ShipName"/>
      <wait min="1s" max="3s"/>
      <resume label="FINISH_LBL"/>

      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->

      <label name="MOVE_TO_SECTOR_LBL"/>
      <set_command command="command.move" param="$CurrentSector"/>
      <set_object_name object="$Ship" name="$ShipsCurrentName + '{8888888, 874}'" comment="$ShipsCurrentName + '\033#FFCEFBA1# ~ Idle - moving to Idle Sector..\033X'"/>
      <run_script name="'move.generic'">
        <param name="destination" value="$CurrentSector"/>
        <param name="endintargetzone" value="true"/>
        <param name="recallsubordinates" value="true"/>
      </run_script>
      <set_object_name object="$Ship" name="$ShipsCurrentName"/>
      <wait exact="1s"/>
      <resume label="RESUME_LBL"/>

      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->

      <label name="FINISH_LBL"/>
      <debug_to_file chance="this.$DEBUG" directory="this.$DebugFolderName" name="$DebugFileName" text="'[' + player.systemtime.{'%F - %X'} + '] ' + '~~ ' + $DebugScriptName + '.xml ~ Finished ~~'"/>
      <debug_to_file chance="this.$DEBUG" directory="this.$DebugFolderName" name="$DebugFileName" text="'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~\n'"/>
      <wait min="1s" max="3s"/>

      <label name="CLEANUP_LBL"/>
      <do_if value="$Ship.knownname != $ShipsCurrentName">
        <set_object_name object="$Ship" name="$ShipsCurrentName"/>
      </do_if>
      <remove_value name="$ShipsCurrentName"/>
      <remove_value chance="this.$DEBUG" name="$DebugFileName"/>
      <remove_value chance="this.$DEBUG" name="$DebugScriptName"/>
      <do_if value="$Ship.defaultorder.id != 'JP_CollectPlaceablesS' and $Ship.defaultorder.id != 'JP_CollectPlaceablesG'">
        <set_object_name object="$Ship" name="this.$ShipName"/>
        <remove_value chance="this.$DEBUG" name="this.$DebugFolderName"/>
        <remove_value chance="this.$DEBUG" name="this.$DEBUG"/>
        <remove_value chance="this.$AddOrderTag" name="this.$ShipName"/>
        <remove_value chance="this.$AddOrderTag" name="this.$AddOrderTag"/>
      </do_if>
      <remove_value name="$CurrentSector"/>
      <remove_value name="$Ship"/>

      <label name="END_LBL"/>
      <wait min="1s" max="3s"/>

    </actions>
  </attention>

  <on_abort>
    <do_if value="$Ship.knownname != $ShipsCurrentName">
      <set_object_name object="$Ship" name="$ShipsCurrentName"/>
    </do_if>
    <remove_value name="$ShipsCurrentName"/>
    <remove_value chance="this.$DEBUG" name="$DebugFileName"/>
    <remove_value chance="this.$DEBUG" name="$DebugScriptName"/>
    <do_if value="$Ship.defaultorder.id != 'JP_CollectPlaceablesS' and $Ship.defaultorder.id != 'JP_CollectPlaceablesG'">
      <set_object_name object="$Ship" name="this.$ShipName"/>
      <remove_value chance="this.$DEBUG" name="this.$DebugFolderName"/>
      <remove_value chance="this.$DEBUG" name="this.$DEBUG"/>
      <remove_value chance="this.$AddOrderTag" name="this.$ShipName"/>
      <remove_value chance="this.$AddOrderTag" name="this.$AddOrderTag"/>
    </do_if>
    <remove_value name="$CurrentSector"/>
    <remove_value name="$Ship"/>
  </on_abort>

</aiscript>