<?xml version="1.0" encoding="utf-8"?>

<aiscript name="JP_CollectPlaceablesG" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="aiscripts.xsd">

  <order id="JP_CollectPlaceablesG" name="_{8888888, 897}CollectPlaceables - {8888888, 899}{8888888, 898}{20001, 901}{8888888, 899}" category="navigation" infinite="true">
    <params>
      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
      <param name="PLACE_HOLDER_000" text="----------------------------------" type="object" default="null">
        <input_param name="class" value="[]"/>
      </param>
      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
      <param name="MINES" text="{8888888, 810}" comment="Collect Mines?" type="bool" default="if global.$CollectPlaceablesG_Settings? then global.$CollectPlaceablesG_Settings.{1} else false"/>
      <param name="SATELLITES" text="{8888888, 811}" comment="Collect Satellites?" type="bool" default="if global.$CollectPlaceablesG_Settings? then global.$CollectPlaceablesG_Settings.{2} else false"/>
      <param name="NAVBEACONS" text="{8888888, 812}" comment="Collect Navigation Beacons?" type="bool" default="if global.$CollectPlaceablesG_Settings? then global.$CollectPlaceablesG_Settings.{3} else false"/>
      <param name="RESOURCEPROBES" text="{8888888, 813}" comment="Collect Resource Probes?" type="bool" default="if global.$CollectPlaceablesG_Settings? then global.$CollectPlaceablesG_Settings.{4} else false"/>
      <param name="LASERTOWERS" text="{8888888, 814}" comment="Collect Laser Towers?" type="bool" default="if global.$CollectPlaceablesG_Settings? then global.$CollectPlaceablesG_Settings.{5} else false"/>
      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
      <param name="PLACE_HOLDER_001" text="----------------------------------" type="object" default="null">
        <input_param name="class" value="[]"/>
      </param>
      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
      <param name="IDLE" text="{8888888, 880}" comment="Idle?" type="bool" default="if global.$CollectPlaceablesG_Settings? then global.$CollectPlaceablesG_Settings.{6} else true"/>
      <param name="IDLE_TIME" text="{8888888, 881}" comment="Idle Time" type="time" default="if global.$CollectPlaceablesG_Settings? then global.$CollectPlaceablesG_Settings.{7} else 600s">
        <input_param name="min" value="60s"/>
        <input_param name="max" value="3600s"/>
        <input_param name="step" value="10s"/>
      </param>
      <param name="IDLE_FOLLOW" text="{8888888, 882}" comment="Idle: Follow?" type="bool" default="if global.$CollectPlaceablesG_Settings? then global.$CollectPlaceablesG_Settings.{8} else false"/>
      <param name="WHO_TO_FOLLOW" text="- {8888888, 883}" comment="Who to follow?" type="object" default="if global.$CollectPlaceablesG_Settings? then global.$CollectPlaceablesG_Settings.{9} else null">
        <input_param name="class" value="[class.ship]"/>
        <input_param name="owner" value="this.ship.owner"/>
      </param>
      <param name="IDLE_DOCKING" text="{8888888, 884}" comment="Idle: Docking?" type="bool" default="if global.$CollectPlaceablesG_Settings? then global.$CollectPlaceablesG_Settings.{10} else false"/>
      <param name="WHERE_TO_DOCK" text="- {8888888, 885}" comment="Where to dock?" type="object" default="if global.$CollectPlaceablesG_Settings? then global.$CollectPlaceablesG_Settings.{11} else null">
        <input_param name="class" value="if this.ship.isclass.[class.ship_s, class.ship_xs] then [class.station, class.ship_m, class.ship_l, class.ship_xl] else [class.station, class.ship_l, class.ship_xl]"/>
      </param>
      <param name="IDLE_RANDOM_MOVEMENT" text="{8888888, 886}" comment="Idle: Movement?" type="bool" default="if global.$CollectPlaceablesG_Settings? then global.$CollectPlaceablesG_Settings.{12} else false"/>
      <param name="IN_WHICH_SECTOR" text="- {8888888, 887}" comment="In which sector?" type="position" default="if global.$CollectPlaceablesG_Settings? then global.$CollectPlaceablesG_Settings.{13} else [this.ship.sector, this.ship.position]">
        <input_param name="class" value="class.sector"/>
      </param>
      <param name="IDLE_MOVE_TO" text="{8888888, 888}" comment="Idle: Move to?" type="bool" default="if global.$CollectPlaceablesG_Settings? then global.$CollectPlaceablesG_Settings.{14} else false"/>
      <param name="WHERE_TO_MOVE" text="- {8888888, 889}" comment="Where to move?" type="position" default="if global.$CollectPlaceablesG_Settings? then global.$CollectPlaceablesG_Settings.{15} else [this.ship.sector, this.ship.position]">
        <input_param name="class" value="class.sector"/>
      </param>
      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
      <param name="PLACE_HOLDER_997" text="----------------------------------" type="object" default="null">
        <input_param name="class" value="[]"/>
      </param>
      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
      <param name="ADD_ORDER_TAG" text="{8888888, 891}" comment="Add order tag?" type="bool" default="if global.$CollectPlaceablesG_Settings? then global.$CollectPlaceablesG_Settings.{16} else true"/>
      <param name="ORDER_TAG_POSITION" text="{8888888, 892}" comment="Order tag position" type="number" default="if global.$CollectPlaceablesG_Settings? then global.$CollectPlaceablesG_Settings.{17} else 1">
        <input_param name="min" value="0"/>
        <input_param name="max" value="1"/>
        <input_param name="step" value="1"/>
      </param>
      <param name="SAVE_ORDER_SETTINGS" text="{8888888, 893}" comment="Save Order Settings?" type="bool" default="false"/>
      <param name="RESET_ORDER_SETTINGS" text="{8888888, 894}" comment="Reset Order Settings?" type="bool" default="false"/>
      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
      <param name="PLACE_HOLDER_998" text="----------------------------------" type="object" default="null">
        <input_param name="class" value="[]"/>
      </param>
      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
      <param name="DEBUG" text="Debug" type="number" default="if global.$CollectPlaceablesG_Settings? then global.$CollectPlaceablesG_Settings.{18} else 0" advanced="true">
        <input_param name="step" value="100"/>
        <input_param name="min" value="0"/>
        <input_param name="max" value="100"/>
      </param>
      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
      <param name="PLACE_HOLDER_999" text="----------------------------------" type="object" default="null" advanced="true">
        <input_param name="class" value="[]"/>
      </param>
      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    </params>
    <skill min="0"/>
    <requires>
      <match shiptype="shiptype.lasertower" negate="true"/>
    </requires>
    <location object="$LOCATION_OBJECT_USED_IN_UI" condition="$LOCATION_OBJECT_USED_IN_UI? and @$LOCATION_OBJECT_USED_IN_UI != null"/>
  </order>

  <interrupts>
    <handler ref="SectorChangeHandler"/>
    <handler ref="TargetInvalidHandler"/>
    <handler ref="AttackHandler"/>
    <handler ref="MissileLockHandler"/>
    <handler ref="ScannedHandler"/>
    <handler ref="InspectedHandler"/>
    <handler ref="FoundAbandonedHandler"/>
    <handler ref="FoundLockboxHandler"/>
    <handler ref="ResupplyHandler"/>
    <handler ref="JobRemoveRequestHandler"/>
  </interrupts>

  <init>
    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    <set_value name="$Ship" exact="this.ship"/>
    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    <set_value chance="$DEBUG" name="this.$DEBUG" exact="$DEBUG"/>
    <set_value chance="$DEBUG" name="$DebugScriptName" exact="'JP_CollectPlaceablesG'"/>
    <set_value chance="$DEBUG" name="this.$DebugFolderName" exact="'JP_CollectPlaceables.logs'"/>
    <set_value chance="$DEBUG" name="$DebugFileName" exact="$Ship.idcode + '.' + $DebugScriptName + '.xml.log'"/>
    <debug_to_file chance="this.$DEBUG" directory="this.$DebugFolderName" name="$DebugFileName" text="'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~'" append="false"/>
    <debug_to_file chance="this.$DEBUG" directory="this.$DebugFolderName" name="$DebugFileName" text="'[' + player.systemtime.{'%F - %X'} + '] ' + '~~ ' + $DebugScriptName + '.xml ~ Started ~~' + '\n'"/>
    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    <set_value chance="if $ADD_ORDER_TAG then 100 else 0" name="this.$AddOrderTag" exact="if $ADD_ORDER_TAG then 100 else 0"/>
    <set_value chance="this.$AddOrderTag" name="$OrderTag" exact="'#CP-G'"/>
    <do_if chance="this.$AddOrderTag" value="not this.$ShipName?">
      <set_value chance="this.$AddOrderTag" name="this.$ShipName" exact="$Ship.knownname"/>
    </do_if>
    <set_object_name chance="this.$AddOrderTag" object="$Ship" name="(if $ORDER_TAG_POSITION then '' else (' \033#FFA95908#' + $OrderTag + '\033X')) + this.$ShipName + (if $ORDER_TAG_POSITION then (' \033#FFA95908#' + $OrderTag + '\033X') else '')"/>
    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    <!-- remove it in a later version.. give time for deleting this unused chunk of memory -->
    <do_if value="true">
      <remove_value name="global.$DebugCP"/>
      <remove_value name="global.$InstantCP"/>
      <remove_value name="global.$LaserTowersCP"/>
      <remove_value name="global.$ResourceprobesCP"/>
      <remove_value name="global.$NavbeaconsCP"/>
      <remove_value name="global.$SatellitesCP"/>
      <remove_value name="global.$MinesCP"/>
      <remove_value name="global.$FriendlySectorsCP"/>
      <remove_value name="global.$NeutralSectorsCP"/>
      <remove_value name="global.$EnemySectorsCP"/>
      <remove_value name="global.$AddOrderTagCP"/>
      <remove_value name="this.$OldName"/>
    </do_if>
    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    <do_if value="$SAVE_ORDER_SETTINGS">
      <create_list name="$_SettingsList"/>
      <append_list_elements name="$_SettingsList" other="[$MINES, $SATELLITES, $NAVBEACONS, $RESOURCEPROBES, $LASERTOWERS,
                            $IDLE, $IDLE_TIME, $IDLE_FOLLOW, $WHO_TO_FOLLOW, $IDLE_DOCKING, $WHERE_TO_DOCK,
                            $IDLE_RANDOM_MOVEMENT, $IN_WHICH_SECTOR, $IDLE_MOVE_TO, $WHERE_TO_MOVE,
                            $ADD_ORDER_TAG, $ORDER_TAG_POSITION, $DEBUG]"/>
      <do_if value="not global.$CollectPlaceablesG_Settings?">
        <create_list name="global.$CollectPlaceablesG_Settings"/>
        <append_list_elements name="global.$CollectPlaceablesG_Settings" other="$_SettingsList"/>
      </do_if>
      <do_else>
        <do_for_each name="$_Setting" in="global.$CollectPlaceablesG_Settings" counter="$_it">
          <do_if value="$_Setting != $_SettingsList.{$_it}">
            <set_value name="global.$CollectPlaceablesG_Settings.{$_it}" exact="$_SettingsList.{$_it}"/>
          </do_if>
        </do_for_each>
      </do_else>
      <remove_value name="$_SettingsList"/>
      <show_help duration="5s" allowclose="true" log="true" custom="$DebugScriptName + ' ~\n' + $Ship.knownname + ' [' + $Ship.idcode + ']\n\n' + '{8888888, 895}'"/>
      <cancel_order order="$Ship.order"/>
    </do_if>
    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    <do_if value="$RESET_ORDER_SETTINGS">
      <do_if value="global.$CollectPlaceablesG_Settings?">
        <remove_value name="global.$CollectPlaceablesG_Settings"/>
      </do_if>
      <show_help duration="5s" allowclose="true" log="true" custom="$DebugScriptName + ' ~\n' + $Ship.knownname + ' [' + $Ship.idcode + ']\n\n' + '{8888888, 896}'"/>
      <cancel_order order="$Ship.order"/>
    </do_if>
    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
  </init>

  <attention min="unknown">
    <actions>

      <label name="INIT_LBL"/>
      <wait min="1s" max="3s"/>

      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->

      <label name="RESUME_LBL"/>

      <!-- just for the ui -->
      <set_command command="command.collect"/>
      <set_command_action commandaction="commandaction.calculating"/>

      <!-- placeables storage full? -->
      <do_if value="$Ship.ammostorage.deployable.free le 0">
        <do_if value="$SELL_PLACEABLES">
          <create_order object="$Ship" id="'JP_EmptyPlaceablesStorage_CP'">
            <param name="SELL_RANGE" value="$SELL_RANGE"/>
          </create_order>
          <wait min="1s" max="3s"/>
        </do_if>
        <do_else>
          <show_help duration="5s" allowclose="true" log="true" custom="$DebugScriptName + ' ~\n' + $Ship.knownname + ' [' + $Ship.idcode + ']\n\n' + '{8888888, 820}'"/>
          <wait min="1s" max="3s"/>
          <resume label="IDLE_RETURN_HOME_LBL"/>
        </do_else>
      </do_if>

      <!-- Are we in the right sector? -->
      <label name="MOVE_TO_SECTOR_LBL"/>
      <do_if value="$Ship.sector != $SECTOR">
        <set_command command="command.move" param="$SECTOR"/>
        <set_value name="$LOCATION_OBJECT_USED_IN_UI" exact="$SECTOR"/>
        <run_script name="'move.generic'">
          <param name="destination" value="$SECTOR"/>
          <param name="endintargetzone" value="true"/>
          <param name="recallsubordinates" value="true"/>
        </run_script>
        <do_if value="this.zone.isclass.highway">
          <get_safe_pos result="$_SafePos" zone="$Ship.zone" object="$Ship" direction="quadrant.front" radius="$Ship.size" angle="45deg"/>
          <move_to object="$Ship" destination="$Ship.zone" uselocalhighways="false" finishonapproach="true" abortpath="true">
            <position value="$_SafePos"/>
          </move_to>
          <remove_value name="$_SafePos"/>
        </do_if>
        <wait min="1s" max="3s"/>
        <remove_value name="$LOCATION_OBJECT_USED_IN_UI"/>
        <do_if value="$Ship.sector != $SECTOR">
          <resume label="MOVE_TO_SECTOR_LBL"/>
        </do_if>
      </do_if>

      <!-- ~~~~~~~ -->



      <!-- ~~~~~~~ -->

      <!-- Nothing to do.. idle a bit and try again -->
      <label name="IDLE_RETURN_HOME_LBL"/>
      <do_if value="$IDLE">
        <create_order id="'JP_IdleReturnHome_CP'" object="$Ship">
          <param name="IDLE_TIME" value="$IDLE_TIME"/>
          <param name="IDLE_FOLLOW" value="$IDLE_FOLLOW"/>
          <param name="WHO_TO_FOLLOW" value="$WHO_TO_FOLLOW"/>
          <param name="IDLE_DOCKING" value="$IDLE_DOCKING"/>
          <param name="WHERE_TO_DOCK" value="$WHERE_TO_DOCK"/>
          <param name="IDLE_RANDOM_MOVEMENT" value="$IDLE_RANDOM_MOVEMENT"/>
          <param name="IN_WHICH_SECTOR" value="$IN_WHICH_SECTOR"/>
          <param name="IDLE_MOVE_TO" value="$IDLE_MOVE_TO"/>
          <param name="WHERE_TO_MOVE" value="$WHERE_TO_MOVE"/>
        </create_order>
      </do_if>
      <wait min="3s" max="6s"/>
      <resume label="RESUME_LBL"/>

      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->

      <label name="FINISH_LBL"/>
      <debug_to_file chance="$DEBUG" directory="this.$DebugFolderName" name="$DebugFileName" text="'[' + player.systemtime.{'%F - %X'} + '] ' + '~~ ' + $DebugScriptName + '.xml ~ Finished ~~'"/>
      <debug_to_file chance="$DEBUG" directory="this.$DebugFolderName" name="$DebugFileName" text="'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~\n'"/>
      <wait min="1s" max="3s"/>

      <label name="CLEANUP_LBL"/>
      <set_object_name chance="this.$AddOrderTag" object="$Ship" name="$this.ShipName"/>
      <remove_value chance="this.$AddOrderTag" name="$OrderTag"/>
      <remove_value chance="this.$AddOrderTag" name="this.$ShipName"/>
      <remove_value chance="this.$AddOrderTag" name="this.$AddOrderTag"/>
      <remove_value chance="$DEBUG" name="this.$DEBUG"/>
      <remove_value chance="$DEBUG" name="$DebugFileName"/>
      <remove_value chance="$DEBUG" name="this.$DebugFolderName"/>
      <remove_value chance="$DEBUG" name="$DebugScriptName"/>
      <remove_value name="$Ship"/>

      <label name="END_LBL"/>
      <set_order_syncpoint_reached order="this.ship.order"/>
      <wait min="1s" max="3s"/>
      <cancel_all_orders object="this.ship"/>

    </actions>
  </attention>

  <on_abort>
    <do_if value="$Ship.orders.count == 0">
      <set_object_name chance="this.$AddOrderTag" object="$Ship" name="$this.ShipName"/>
      <remove_value chance="this.$AddOrderTag" name="$OrderTag"/>
      <remove_value chance="this.$AddOrderTag" name="this.$ShipName"/>
      <remove_value chance="this.$AddOrderTag" name="this.$AddOrderTag"/>
      <remove_value chance="$DEBUG" name="this.$DEBUG"/>
      <remove_value chance="$DEBUG" name="$DebugFileName"/>
      <remove_value chance="$DEBUG" name="this.$DebugFolderName"/>
      <remove_value chance="$DEBUG" name="$DebugScriptName"/>
      <remove_value name="$Ship"/>
    </do_if>
  </on_abort>

</aiscript>