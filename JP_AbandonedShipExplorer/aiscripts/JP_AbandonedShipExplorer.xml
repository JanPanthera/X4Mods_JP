<?xml version="1.0" encoding="utf-8"?>

<aiscript name="JP_AbandonedShipExplorer" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="aiscripts.xsd">

  <order id="JP_AbandonedShipExplorer" name="{8888888, 197}AbandonedShipExplorer{8888888, 199}" category="navigation" infinite="true">
    <params>
      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
      <param name="ENEMY_SECTORS" text="{8888888, 100}" comment="Enemy Sectors?" type="bool" default="if global.$EnemySectorsASE? then global.$EnemySectorsASE else false"/>
      <param name="NEUTRAL_SECTORS" text="{8888888, 101}" comment="Neutral Sectors?" type="bool" default="if global.$NeutralSectorsASE? then global.$NeutralSectorsASE else true"/>
      <param name="FRIENDLY_SECTORS" text="{8888888, 102}" comment="Friendly Sectors?" type="bool" default="if global.$FrienlySectorsASE? then global.$FrienlySectorsASE else true"/>
      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
      <param name="SHOW_MESSAGE" text="{8888888, 110}" comment="Message when arrived?" type="bool" default="if global.$ShowMessageASE? then global.$ShowMessageASE else true"/>
      <param name="WAIT_AT_SHIP" text="{8888888, 111}" comment="Wait at the ship?" type="bool" default="if global.$WaitAtShipASE? then global.$WaitAtShipASE else true"/>
      <param name="WAIT_AMOUNT" text="- {8888888, 112}" comment="How long to wait?" type="time" default="if global.$WaitAmountASE? then global.$WaitAmountASE else 60s">
        <input_param name="step" value="10s"/>
        <input_param name="min" value="10s"/>
        <input_param name="max" value="3600s"/>
      </param>
      <param name="PLACE_NAVBEACON" text="{8888888, 113}" comment="Place navigation beacons?" type="bool" default="if global.$PlaceNavbeaconASE? then global.$PlaceNavbeaconASE else true"/>
      <param name="RESTOCK_NAV_BEACONS" text="{8888888, 114}" comment="Restock navigation beacons?" type="bool" default="if global.$RestockNavBeaconsASE? then global.$RestockNavBeaconsASE else true"/>
      <param name="RESTOCK_AMOUNT" text="- {8888888, 115}" comment="Amount to restock" type="number" default="3">
        <input_param name="step" value="1"/>
        <input_param name="min" value="1"/>
        <input_param name="max" value="if this.ship.ammostorage.deployable.free le 0 then 1 else this.ship.ammostorage.deployable.free"/>
      </param>
      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
      <param name="IDLE_TIME" text="{8888888, 180}" comment="Idle Time" type="time" default="if global.$IdleTimeASE? then global.$IdleTimeASE else 600s">
        <input_param name="min" value="60s"/>
        <input_param name="max" value="3600s"/>
        <input_param name="step" value="10s"/>
      </param>
      <param name="IDLE_FOLLOW" text="{8888888, 181}" comment="Idle: Follow?" type="bool" default="if global.$IdleFollowASE? then global.$IdleFollowASE else false"/>
      <param name="WHO_TO_FOLLOW" text="- {8888888, 182}" comment="Who to follow?" type="object" default="if global.$WhoToFollowASE? then global.$WhoToFollowASE else null">
        <input_param name="class" value="[class.ship]"/>
        <input_param name="owner" value="this.ship.owner"/>
      </param>
      <param name="IDLE_DOCKING" text="{8888888, 183}" comment="Idle: Docking?" type="bool" default="if global.$IdleDockingASE? then global.$IdleDockingASE else false"/>
      <param name="WHERE_TO_DOCK" text="- {8888888, 184}" comment="Where to dock?" type="object" default="if global.$WhereToDockASE? then global.$WhereToDockASE else null">
        <input_param name="class" value="if this.ship.isclass.[class.ship_s, class.ship_xs] then [class.station, class.ship_m, class.ship_l, class.ship_xl] else [class.station, class.ship_l, class.ship_xl]"/>
      </param>
      <param name="IDLE_RANDOM_MOVEMENT" text="{8888888, 185}" comment="Idle: Movement?" type="bool" default="if global.$IdleRandomMovementASE? then global.$IdleRandomMovementASE else false"/>
      <param name="IN_WHICH_SECTOR" text="- {8888888, 186}" comment="In which sector?" type="position" default="if global.$InWhichSectorASE? then global.$InWhichSectorASE else [this.ship.sector, this.ship.position]">
        <input_param name="class" value="class.sector"/>
      </param>
      <param name="IDLE_MOVE_TO" text="{8888888, 187}" comment="Idle: Move to?" type="bool" default="if global.$IdleMoveToASE? then global.$IdleMoveToASE else false"/>
      <param name="WHERE_TO_MOVE" text="- {8888888, 188}" comment="Where to move?" type="position" default="if global.$WhereToMoveASE? then global.$WhereToMoveASE else [this.ship.sector, this.ship.position]">
        <input_param name="class" value="class.sector"/>
      </param>
      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
      <param name="ADD_ORDER_TAG" text="{8888888, 194}" comment="Add order tag?" type="bool" default="if global.$AddOrderTagASE? then global.$AddOrderTagASE else true"/>
      <param name="SAVE_SETTINGS" text="{8888888, 195}" comment="SaveSettings" type="bool" default="false"/>
      <param name="DELETE_SETTINGS" text="{8888888, 196}" comment="DeleteSettings" type="bool" default="false"/>
      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
      <!-- DEBUG -->
      <param name="DEBUG" text="DebugText" type="number" default="if global.$DebugASE? then global.$DebugASE else 0" advanced="true">
        <input_param name="min" value="0"/>
        <input_param name="max" value="100"/>
        <input_param name="step" value="100"/>
      </param>
      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    </params>
    <skill min="0"/>
    <requires>
      <match shiptype="shiptype.lasertower" negate="true"/>
    </requires>
  </order>

  <interrupts>
    <handler ref="SectorChangeHandler"/>
    <handler ref="TargetInvalidHandler"/>
    <handler ref="AttackHandler"/>
    <handler ref="MissileLockHandler" />
    <handler ref="ScannedHandler"/>
    <handler ref="InspectedHandler"/>
    <handler ref="FoundAbandonedHandler"/>
    <handler ref="FoundLockboxHandler"/>
    <handler ref="ResupplyHandler"/>
    <handler ref="JobRemoveRequestHandler" />
  </interrupts>

  <init>
    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    <set_value name="$DebugDirectory" exact="'JP_AbandonedShipExplorer.logs'"/>
    <set_value name="$DebugFileName" exact="this.ship.idcode + '.JP_AbandonedShipExplorer.xml.log'"/>
    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    <set_value name="$Ship" exact="this.ship"/>
    <set_value name="this.$OldName" exact="this.ship.name"/>
    <do_if value="$ADD_ORDER_TAG">
      <set_object_name object="this.ship" name="this.ship.name + '\033#FFA2560B# #ASE\033X'"/>
    </do_if>
    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    <do_if value="$SAVE_SETTINGS">
      <do_if value="not global.$EnemySectorsASE? or @global.$EnemySectorsASE != $ENEMY_SECTORS">
        <set_value name="global.$EnemySectorsASE" exact="$ENEMY_SECTORS"/>
      </do_if>
      <do_if value="not global.$NeutralSectorsASE? or @global.$NeutralSectorsASE != $NEUTRAL_SECTORS">
        <set_value name="global.$NeutralSectorsASE" exact="$NEUTRAL_SECTORS"/>
      </do_if>
      <do_if value="not global.$FriendlySectorsASE? or @global.$FriendlySectorsASE != $FRIENDLY_SECTORS">
        <set_value name="global.$FriendlySectorsASE" exact="$FRIENDLY_SECTORS"/>
      </do_if>
      <do_if value="not global.$ShowMessageASE? or @global.$ShowMessageASE != $SHOW_MESSAGE">
        <set_value name="global.$ShowMessageASE" exact="$SHOW_MESSAGE"/>
      </do_if>
      <do_if value="not global.$WaitAtShipASE? or @global.$WaitAtShipASE != $WAIT_AT_SHIP">
        <set_value name="global.$WaitAtShipASE" exact="$WAIT_AT_SHIP"/>
      </do_if>
      <do_if value="not global.$WaitAmountASE? or @global.$WaitAmountASE != $WAIT_AMOUNT">
        <set_value name="global.$WaitAmountASE" exact="$WAIT_AMOUNT"/>
      </do_if>
      <do_if value="not global.$PlaceNavbeaconASE? or @global.$PlaceNavbeaconASE != $PLACE_NAVBEACON">
        <set_value name="global.$PlaceNavbeaconASE" exact="$PLACE_NAVBEACON"/>
      </do_if>
      <do_if value="not global.$RestockNavBeaconsASE? or @global.$RestockNavBeaconsASE != $RESTOCK_NAV_BEACONS">
        <set_value name="global.$RestockNavBeaconsASE" exact="$RESTOCK_NAV_BEACONS"/>
      </do_if>
      <do_if value="not global.$IdleTimeASE? or @global.$IdleTimeASE != $IDLE_TIME">
        <set_value name="global.$IdleTimeASE" exact="$IDLE_TIME"/>
      </do_if>
      <do_if value="not global.$IdleFollowASE? or @global.$IdleFollowASE != $IDLE_FOLLOW">
        <set_value name="global.$IdleFollowASE" exact="$IDLE_FOLLOW"/>
      </do_if>
      <do_if value="not global.$WhoToFollowASE? or @global.$WhoToFollowASE != $WHO_TO_FOLLOW">
        <set_value name="global.$WhoToFollowASE" exact="$WHO_TO_FOLLOW"/>
      </do_if>
      <do_if value="not global.$IdleDockingASE? or @global.$IdleDockingASE != $IDLE_DOCKING">
        <set_value name="global.$IdleDockingASE" exact="$IDLE_DOCKING"/>
      </do_if>
      <do_if value="not global.$WhereToDockASE? or @global.$WhereToDockASE != $WHERE_TO_DOCK">
        <set_value name="global.$WhereToDockASE" exact="$WHERE_TO_DOCK"/>
      </do_if>
      <do_if value="not global.$IdleRandomMovementASE? or @global.$IdleRandomMovementASE != $IDLE_RANDOM_MOVEMENT">
        <set_value name="global.$IdleRandomMovementASE" exact="$IDLE_RANDOM_MOVEMENT"/>
      </do_if>
      <do_if value="not global.$InWhichSectorASE? or @global.$InWhichSectorASE != $IN_WHICH_SECTOR">
        <set_value name="global.$InWhichSectorASE" exact="$IN_WHICH_SECTOR"/>
      </do_if>
      <do_if value="not global.$IdleMoveToASE? or @global.$IdleMoveToASE != $IDLE_MOVE_TO">
        <set_value name="global.$IdleMoveToASE" exact="$IDLE_MOVE_TO"/>
      </do_if>
      <do_if value="not global.$WhereToMoveASE? or @global.$WhereToMoveASE != $WHERE_TO_MOVE">
        <set_value name="global.$WhereToMoveASE" exact="$WHERE_TO_MOVE"/>
      </do_if>
      <do_if value="not global.$AddOrderTagASE? or @global.$AddOrderTagASE != $ADD_ORDER_TAG">
        <set_value name="global.$AddOrderTagASE" exact="$ADD_ORDER_TAG"/>
      </do_if>
      <do_if value="not global.$DebugASE? or @global.$DebugASE != $DEBUG">
        <set_value name="global.$DebugASE" exact="$DEBUG"/>
      </do_if>
    </do_if>
    <do_if value="$DELETE_SETTINGS">
      <remove_value name="global.$EnemySectorsASE"/>
      <remove_value name="global.$NeutralSectorsASE"/>
      <remove_value name="global.$FriendlySectorsASE"/>
      <remove_value name="global.$ShowMessageASE"/>
      <remove_value name="global.$WaitAtShipASE"/>
      <remove_value name="global.$WaitAmountASE"/>
      <remove_value name="global.$PlaceNavbeaconASE"/>
      <remove_value name="global.$RestockNavBeaconsASE"/>
      <remove_value name="global.$WhereToMoveASE"/>
      <remove_value name="global.$IdleMoveToASE"/>
      <remove_value name="global.$InWhichSectorASE"/>
      <remove_value name="global.$IdleRandomMovementASE"/>
      <remove_value name="global.$WhereToDockASE"/>
      <remove_value name="global.$IdleDockingASE"/>
      <remove_value name="global.$WhoToFollowASE"/>
      <remove_value name="global.$IdleFollowASE"/>
      <remove_value name="global.$IdleTimeASE"/>
      <remove_value name="global.$AddOrderTagASE"/>
      <remove_value name="global.$DebugASE"/>
      <!-- Cancel order because the settings are invalid.. because they were deleted -->
      <cancel_order order="this.ship.order"/>
    </do_if>
    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
  </init>

  <attention min="unknown">
    <actions>

      <wait exact="1ms"/>
      <label name="INIT"/>

      <do_if value="$DEBUG gt 0">
        <debug_to_file append="false" directory="$DebugDirectory" name="$DebugFileName" text="'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~'"/>
        <debug_to_file directory="$DebugDirectory" name="$DebugFileName" text="'[' + player.systemtime.{'%F - %X'} + '] ' + '~~ JP_AbandonedShipExplorer.xml ~ Started ~~' + '\n'"/>
      </do_if>

      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->

      <label name="RESUME_LBL"/>

      <run_script name="'JP_GetNearestAbandonedShip_ASE'">
        <param name="ENEMY_SECTORS" value="$ENEMY_SECTORS"/>
        <param name="NEUTRAL_SECTORS" value="$NEUTRAL_SECTORS"/>
        <param name="FRIENDLY_SECTORS" value="$FRIENDLY_SECTORS"/>
        <param name="DEBUG" value="$DEBUG"/>
        <save_retval name="NEAREST_ABANDONED_SHIP" variable="$NearestAbandonedShip"/>
      </run_script>

      <do_if value="$NearestAbandonedShip == 'NoAbandonedShipFound'">
        <do_if value="$DEBUG gt 0">
          <debug_to_file directory="$DebugDirectory" name="$DebugFileName" text="'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~'"/>
          <debug_to_file directory="$DebugDirectory" name="$DebugFileName" text="$NearestAbandonedShip"/>
          <debug_to_file directory="$DebugDirectory" name="$DebugFileName" text="'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~\n'"/>
        </do_if>
        <resume label="IDLE_RETURN_HOME_LBL"/>
      </do_if>

      <!-- Restock navbeacons? -->
      <do_if value="$PLACE_NAVBEACON and $Ship.ammostorage.{deployablecategory.navbeacon}.count == 0 and $RESTOCK_NAV_BEACONS">
        <run_script name="'JP_RestockNavBeacons_ASE'">
          <param name="RESTOCK_AMOUNT" value="$RESTOCK_AMOUNT"/>
          <param name="DEBUG" value="$DEBUG"/>
          <save_retval name="RESULT" variable="$_Result"/>
        </run_script>
        <do_if value="$_Result == 'Resupplying_NoFreeStorage'">
          <show_help custom="$Ship.knownname + ' [' + $Ship.idcode + ']' + '\n' +
                             '~ JP_AbandonedShipExplorer: {8888888, 119}'" allowclose="true"/>
          <!-- ~ JP_AbandonedShipExplorer: No free storage for restocking navigation beacons! -->
          <resume label="IDLE_RETURN_HOME_LBL"/>
        </do_if>
        <do_if value="$_Result == 'Resupplying_Failed'">
          <wait min="3s" max="6s"/>
          <resume label="RESUME_LBL"/>
        </do_if>
      </do_if>
      <do_if value="$PLACE_NAVBEACON and $Ship.ammostorage.{deployablecategory.navbeacon}.count == 0 and not $RESTOCK_NAV_BEACONS">
        <show_help custom="$Ship.knownname + ' [' + $Ship.idcode + ']' + '\n' +
                           '~ JP_AbandonedShipExplorer: {8888888, 120}\n'" allowclose="true"/>
        <!-- ~ JP_AbandonedShipExplorer: No navigation beacons on board and restocking turned off, going idle... -->
        <resume label="IDLE_RETURN_HOME_LBL"/>
      </do_if>

      <run_script name="'JP_ExploreAbandonedShip'">
        <param name="ABANDONED_SHIP" value="$NearestAbandonedShip"/>
        <param name="WAIT_AT_SHIP" value="$WAIT_AT_SHIP"/>
        <param name="WAIT_AMOUNT" value="$WAIT_AMOUNT"/>
        <param name="PLACE_NAVBEACON" value="$PLACE_NAVBEACON"/>
        <param name="SHOW_MESSAGE" value="$SHOW_MESSAGE"/>
        <param name="DEBUG" value="$DEBUG"/>
      </run_script>
      <remove_value name="$NearestAbandonedShip"/>
      <resume label="RESUME_LBL"/>

      <label name="IDLE_RETURN_HOME_LBL"/>
      <run_script name="'JP_IdleReturnHome_ASE'">
        <param name="IDLE_FOLLOW" value="$IDLE_FOLLOW"/>
        <param name="WHO_TO_FOLLOW" value="$WHO_TO_FOLLOW"/>
        <param name="IDLE_DOCKING" value="$IDLE_DOCKING"/>
        <param name="WHERE_TO_DOCK" value="$WHERE_TO_DOCK"/>
        <param name="IDLE_RANDOM_MOVEMENT" value="$IDLE_RANDOM_MOVEMENT"/>
        <param name="IN_WHICH_SECTOR" value="$IN_WHICH_SECTOR"/>
        <param name="IDLE_MOVE_TO" value="$IDLE_MOVE_TO"/>
        <param name="WHERE_TO_MOVE" value="$WHERE_TO_MOVE"/>
        <param name="IDLE_TIME" value="$IDLE_TIME"/>
        <param name="DEBUG" value="$DEBUG"/>
      </run_script>
      <set_object_name object="$Ship" name="if $ADD_ORDER_TAG then this.$OldName + '\033#FFA95908# #ASE\033X' else this.$OldName"/>
      <resume label="RESUME_LBL"/>

      <label name="FINISH_LBL"/>

      <do_if value="$ADD_ORDER_TAG and this.$OldName?">
        <set_object_name object="this.ship" name="this.$OldName"/>
      </do_if>

      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->

      <do_if value="$DEBUG gt 0">
        <debug_to_file directory="$DebugDirectory" name="$DebugFileName" text="'[' + player.systemtime.{'%F - %X'} + '] ' + '~~ JP_AbandonedShipExplorer.xml ~ Finished ~~'"/>
        <debug_to_file directory="$DebugDirectory" name="$DebugFileName" text="'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~\n'"/>
      </do_if>

      <label name="CLEANUP"/>
      <remove_value name="this.$OldName"/>
      <remove_value name="$Ship"/>
      <remove_value name="$DebugFileName"/>
      <remove_value name="$DebugDirectory"/>

      <label name="END_LBL"/>
      <wait exact="1ms"/>
      <set_order_syncpoint_reached order="this.ship.order"/>
      <cancel_order order="this.ship.order" />

    </actions>
  </attention>

  <on_abort>
    <do_if value="$ADD_ORDER_TAG and this.$OldName?">
      <set_object_name object="this.ship" name="this.$OldName"/>
      <remove_value name="this.$OldName"/>
    </do_if>
  </on_abort>

</aiscript>
